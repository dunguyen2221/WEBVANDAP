@model WEBVANDAP.Models.Category

@{
    ViewBag.Title = "Chỉnh sửa Danh mục: " + Model.Name;
    Layout = "~/Views/Shared/Layout2.cshtml"; // Giữ nguyên cách bạn nhúng HTML/CSS/Sidebar vào View
}


        <main class="main-content">
            <h2 class="dashboard-header">CHỈNH SỬA DANH MỤC</h2>

            @* Dùng BeginForm mặc định sẽ gọi action Edit (POST) của CategoryController *@
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="card p-4">
                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                    @* BẮT BUỘC phải có HiddenFor Id để Controller biết đang sửa đối tượng nào *@
                    @Html.HiddenFor(model => model.Id)

                    @* TÊN DANH MỤC *@
                    <div class="mb-3">
                        @Html.LabelFor(model => model.Name, "Tên Danh Mục:", new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>

                    @* Ví dụ cho IsActive (Checkbox) - ĐÃ KHẮC PHỤC LỖI *@
                    <div class="form-check mb-3">
                        @{
                            // 1. Lấy giá trị IsActive, mặc định là false nếu nó là null (bool?)
                            bool isChecked = Model.IsActive ?? false;

                            // 2. Dùng Html.CheckBox để tạo input type="checkbox"
                            // (Html.CheckBoxFor không chấp nhận biểu thức ?? false)
                            @Html.CheckBox("IsActive", isChecked, new { @class = "form-check-input" })
                        }
                        @Html.LabelFor(model => model.IsActive, "Kích hoạt (Hiển thị):", new { @class = "form-check-label" })

                        @* 3. Thêm Hidden field để đảm bảo giá trị FALSE được POST lên Controller khi checkbox không được chọn *@
                        @Html.Hidden("IsActive", isChecked)
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        @Html.ActionLink("Quay lại Danh sách", "Index", null, new { @class = "btn btn-secondary" })
                        <button type="submit" class="btn btn-primary"><i class="fa fa-save me-1"></i> Lưu Thay Đổi</button>
                    </div>
                </div>
            }
        </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const sidebar = document.getElementById('sidebar');
        const toggleBtn = document.getElementById('toggle-btn');
        toggleBtn.addEventListener('click', () => {
            sidebar.classList.toggle('expand');
        });
    </script>
