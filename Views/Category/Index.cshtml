@model IEnumerable<WEBVANDAP.Models.Category>

@{
    ViewBag.Title = "Quản lý Danh mục - LogiT Shop";
    Layout = "~/Views/Shared/Layout2.cshtml";
}



        <!-- Main content -->
        <div class="flex-grow-1 p-4 d-flex flex-column main-content">

            <div class="top-admin-bar d-flex justify-content-between align-items-center">
                <h2 class="text-dark fw-bold h4 mb-0">Quản lý Danh Mục</h2>
                <i class="bi bi-list-check fs-2 text-primary"></i>
            </div>

            <div class="d-flex justify-content-between mb-3">
                @Html.ActionLink("➕ Tạo Danh Mục Mới", "Create", null, new { @class = "btn btn-success" })
                @Html.ActionLink("🏠 Về Dashboard", "Index", "Admin", null, new { @class = "btn btn-info" })
            </div>

            <div class="card card-custom">
                <div class="card-body p-4">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th style="width:10%">ID</th>
                                    <th style="width:70%">Tên Danh Mục</th>
                                    <th style="width:20%" class="text-center">Thao Tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.Name</td>
                                            <td class="text-center action-buttons">
                                                @Html.ActionLink("Sửa", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-primary" })
                                                @Html.ActionLink("Chi tiết", "Details", new { id = item.Id }, new { @class = "btn btn-sm btn-info" })
                                                @Html.ActionLink("Xóa", "Delete", new { id = item.Id }, new { @class = "btn btn-sm btn-danger" })
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="3" class="text-center text-muted">Chưa có danh mục nào được tạo.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
