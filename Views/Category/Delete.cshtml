@model WEBVANDAP.Models.Category

@{
    ViewBag.Title = "Xác nhận Xóa Danh mục";
    Layout = "~/Views/Shared/Layout2.cshtml";
}

<h2 class="dashboard-header text-danger">XÁC NHẬN XÓA DANH MỤC</h2>
<hr />

<div class="card p-4">

    <h4 class="text-warning mb-4">Bạn có chắc chắn muốn xóa danh mục này không?</h4>

    <dl class="row mb-4">
        <dt class="col-sm-3">ID:</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Id)</dd>

        <dt class="col-sm-3">Tên Danh Mục:</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>
    </dl>

    @using (Html.BeginForm("Delete", "Category", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)

        <div class="d-flex justify-content-start gap-3 mt-4">
            @Html.ActionLink("Hủy bỏ", "Index", null, new { @class = "btn btn-secondary" })
            <button type="submit" class="btn btn-danger">
                <i class="fa fa-trash-alt me-1"></i> Xóa Vĩnh Viễn
            </button>
        </div>
    }
</div>

<div class="mt-3">
    @Html.ActionLink("Quay lại Danh sách Quản lý", "Index", null, new { @class = "btn btn-outline-secondary" })
</div>
