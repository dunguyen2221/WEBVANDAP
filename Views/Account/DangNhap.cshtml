@{
    Layout = "~/Views/Shared/_LayoutAnimation.cshtml";
    ViewBag.Title = "Đăng Nhập";
}

@section Styles {
    <style>
        /* CSS riêng cho Form Đăng Nhập */
        .login-section {
            min-height: 80vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-container {
            background: white;
            border-radius: 20px;
            box-shadow: 0 0 15px rgba(0,0,0,0.2);
            width: 80%;
            max-width: 1000px;
            display: flex;
            overflow: hidden;
        }

        .login-image {
            flex: 1;
            background: url('https://images.unsplash.com/photo-1593642532973-d31b6557fa68?auto=format&fit=crop&w=900&q=80') center;
            background-size: cover;
        }

        .login-form {
            flex: 1;
            padding: 50px;
        }

            .login-form h2 {
                color: #dc3545;
                font-weight: 700;
                margin-bottom: 30px;
            }

            .login-form .form-control {
                border-radius: 8px;
            }

            .login-form .btn {
                border-radius: 8px;
                font-weight: 600;
            }
    </style>
}

<section class="login-section">
    <div class="login-container">
        <div class="login-image"></div>

        <div class="login-form">
            <h2>Đăng Nhập</h2>
            <form method="post" action="@Url.Action("DangNhap", "Account")">
                <div class="mb-3">
                    <label for="Email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="Email" name="Email" placeholder="Nhập email của bạn" required>
                </div>
                <div class="mb-3">
                    <label for="Password" class="form-label">Mật khẩu</label>
                    <input type="password" class="form-control" id="Password" name="Password" placeholder="Nhập mật khẩu" required>
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="RememberMe" name="RememberMe">
                    <label class="form-check-label" for="RememberMe">Ghi nhớ đăng nhập</label>
                </div>
                <button type="submit" class="btn btn-danger w-100 py-2">Đăng nhập</button>
                <div class="text-center mt-3">
                    <small>Bạn chưa có tài khoản? <a href="@Url.Action("DangKy", "Account")" class="text-danger fw-semibold">Đăng ký ngay</a></small>
                </div>
            </form>
        </div>
    </div>
</section>