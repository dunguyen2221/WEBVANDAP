@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LogiT Shop</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            background-color: #f8f9fa;
            font-family: "Segoe UI", sans-serif;
        }

        /* ===== FORM NGANG ===== */
        .login-section {
            min-height: 80vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-container {
            background: white;
            border-radius: 20px;
            box-shadow: 0 0 15px rgba(0,0,0,0.2);
            width: 80%;
            max-width: 1000px;
            display: flex;
            overflow: hidden;
        }

        .login-image {
            flex: 1;
            background: url('https://images.unsplash.com/photo-1593642532973-d31b6557fa68?auto=format&fit=crop&w=900&q=80') center;
        }

        .login-form {
            flex: 1;
            padding: 50px;
        }

            .login-form h2 {
                color: #dc3545;
                font-weight: 700;
                margin-bottom: 30px;
            }

            .login-form .form-control {
                border-radius: 8px;
            }

            .login-form .btn {
                border-radius: 8px;
                font-weight: 600;
            }

        /* ===== FOOTER ===== */
        footer {
            background: #212529;
            color: #fff;
            padding: 60px 0 20px;
        }

            footer h5 {
                color: #ffc107;
                font-weight: 600;
            }

            footer a {
                text-decoration: none;
                color: #ddd;
            }

                footer a:hover {
                    color: #fff;
                }

        .footer-bottom {
            border-top: 1px solid rgba(255,255,255,0.2);
            margin-top: 30px;
            padding-top: 15px;
            text-align: center;
            color: #aaa;
        }

        /* SNOW SNOW SNOW */
        #snow-container {
            position: fixed;
            /* Hiển thị cố định, ngay cả khi cuộn */
            top: 0;
            left: 0;
            width: 100%;
            height: 105vh;
            /* Cao 100% chiều cao màn hình */
            overflow: hidden;
            /* Ẩn tuyết khi rơi ra ngoài */
            pointer-events: none;
            /* QUAN TRỌNG: Cho phép click xuyên qua lớp này */
            z-index: 9999;
            /* Đảm bảo tuyết rơi bên trên mọi thứ */
        }

        /* Định nghĩa 1 bông tuyết */
        .snowflake {
            position: absolute;
            font-size: 1.5rem;
            /* Kích thước bông tuyết */
            user-select: none;
            /* Ngăn người dùng chọn/bôi đen bông tuyết */
            /* Bắt đầu rơi từ bên trên màn hình */
            top: -20px;
            /* Gọi hiệu ứng rơi (fall) */
            animation: fall linear infinite;
        }

        /* Định nghĩa chuyển động rơi */
        @@keyframes fall {
            from {
                transform: translateY(0) rotate(0deg);
            }

            to {
                /* Rơi xuống 105% chiều cao (để rơi hẳn ra ngoài) và xoay */
                transform: translateY(105vh) rotate(360deg);
            }
        }
    </style>
</head>

<body>

    <!-- ===== FORM NGANG ===== -->
    <section class="login-section">
        <div class="login-container">
            <div class="login-image"></div>

            <div class="login-form">
                <h2>Đăng Nhập</h2>
                <form method="post" action="@Url.Action("DangNhap", "Account")">
                    <div class="mb-3">
                        <label for="Email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="Email" name="Email" placeholder="Nhập email của bạn" required>
                    </div>
                    <div class="mb-3">
                        <label for="Password" class="form-label">Mật khẩu</label>
                        <input type="password" class="form-control" id="Password" name="Password" placeholder="Nhập mật khẩu" required>
                    </div>
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="RememberMe">
                        <label class="form-check-label" for="RememberMe">Ghi nhớ đăng nhập</label>
                    </div>
                    <button type="submit" class="btn btn-danger w-100 py-2">Đăng nhập</button>
                    <div class="text-center mt-3">
                        <small>Bạn chưa có tài khoản? <a href="@Url.Action("DangKy", "Account")" class="text-danger fw-semibold">Đăng ký ngay</a></small>
                    </div>
                </form>
            </div>
        </div>
    </section>

    <!-- SCRIPT SCRIPT SCRIPT -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // 1. Tạo 1 div container cho tuyết
            const snowContainer = document.createElement('div');
            snowContainer.id = 'snow-container';
            document.body.appendChild(snowContainer);

            // 2. Hàm tạo 1 bông tuyết
            function createSnowflake() {
                const snowflake = document.createElement('span');
                snowflake.classList.add('snowflake');
                snowflake.textContent = '❄️'; // Emoji bông tuyết

                // 3. Random các thuộc tính để tuyết rơi tự nhiên

                // Vị trí bắt đầu (ngang) ngẫu nhiên
                snowflake.style.left = Math.random() * 100 + 'vw';

                // Tốc độ rơi ngẫu nhiên (từ 5 đến 10 giây)
                snowflake.style.animationDuration = (Math.random() * 5 + 5) + 's';

                // Độ mờ ngẫu nhiên (từ 0.3 đến 1)
                snowflake.style.opacity = Math.random() * 0.7 + 0.3;

                // Kích thước ngẫu nhiên (từ 10px đến 20px)
                snowflake.style.fontSize = (Math.random() * 10 + 10) + 'px';

                // Thêm bông tuyết vào container
                snowContainer.appendChild(snowflake);

                // 4. Xóa bông tuyết sau khi nó rơi xong (10 giây) để tiết kiệm bộ nhớ
                setTimeout(() => {
                    snowflake.remove();
                }, 10000); // 10000ms = 10 giây
            }

            // 5. Liên tục tạo tuyết mới mỗi 100ms
            setInterval(createSnowflake, 600);
        });
    </script>
</body>
</html>
