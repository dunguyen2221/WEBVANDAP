@model IEnumerable<WEBVANDAP.Models.Product>
@{
    ViewBag.Title = "Quản Lý Sản Phẩm";
    Layout = "~/Views/Shared/Layout2.cshtml";
}

<h2 class="dashboard-header">QUẢN LÝ SẢN PHẨM</h2>
<hr />

<div class="top-bar mb-3">
    @Html.ActionLink("➕ Thêm Sản Phẩm Mới", "Create", null, new { @class = "btn btn-success" })
    @Html.ActionLink("🏠 Về Dashboard", "Index", "Admin", null, new { @class = "btn btn-info" })
</div>

<div class="card p-3">
    <table class="table table-striped table-hover align-middle">
        <thead>
            <tr>
                <th style="width:5%">ID</th>
                <th style="width:25%">Tên Sản phẩm</th>
                <th style="width:15%">Danh mục</th>
                <th style="width:15%">Thương hiệu</th>
                <th style="width:10%">Giá</th>
                <th class="text-center" style="width:10%">Tồn kho</th>
                <th style="width:20%" class="text-center">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@(item.Category != null ? item.Category.Name : "N/A")</td>
                        <td>@(item.Brand != null ? item.Brand.Name : "N/A")</td>
                        <td class="text-nowrap">@item.Price.ToString("N0") VNĐ</td>
                        <td class="text-center">@item.Stock</td>
                        <td class="text-center">
                            @Html.ActionLink("Sửa", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-primary" })
                            @Html.ActionLink("Chi tiết", "Details", new { id = item.Id }, new { @class = "btn btn-sm btn-info" })
                            @Html.ActionLink("Xóa", "Delete", new { id = item.Id }, new { @class = "btn btn-sm btn-danger" })
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center text-muted">Chưa có sản phẩm nào được tạo.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
