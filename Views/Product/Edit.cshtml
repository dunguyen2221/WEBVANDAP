@model WEBVANDAP.Models.Product

@{
    ViewBag.Title = "Chỉnh sửa Sản phẩm - LogiT Shop Admin";
    Layout = "~/Views/Shared/Layout2.cshtml";
}


        <!-- Main content -->
        <div class="flex-grow-1 p-4 main-content">
            <div class="top-admin-bar d-flex justify-content-between align-items-center">
                <h2 class="text-dark fw-bold h4 mb-0">Chỉnh sửa sản phẩm</h2>
                <i class="bi bi-box-seam fs-2 text-primary"></i>
            </div>

            <div class="card p-4 mt-3">
                @using (Html.BeginForm("Edit", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "Vui lòng kiểm tra lại thông tin:", new { @class = "alert alert-danger" })
                    @Html.HiddenFor(m => m.Id)
                    @Html.HiddenFor(m => m.Slug)

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Name)
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Price)
                        @Html.TextBoxFor(m => m.Price, new { @class = "form-control", type = "number" })
                        @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Stock)
                        @Html.TextBoxFor(m => m.Stock, new { @class = "form-control", type = "number" })
                        @Html.ValidationMessageFor(m => m.Stock, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.CategoryId)
                        @Html.DropDownList("CategoryId", null, "--- Chọn Danh Mục ---", new { @class = "form-select" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.BrandId)
                        @Html.DropDownList("BrandId", null, "--- Chọn Thương Hiệu ---", new { @class = "form-select" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Description)
                        @Html.TextAreaFor(m => m.Description, 5, 80, new { @class = "form-control" })
                    </div>

                    <div class="mb-3">
                        <label for="images" class="form-label">Thay Ảnh Sản Phẩm</label>
                        <input type="file" id="images" name="images" multiple accept="image/*" class="form-control" />
                        <small class="text-muted">Bỏ trống nếu không muốn thay đổi ảnh.</small>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        @Html.ActionLink("Quay lại Danh sách", "Index", null, new { @class = "btn btn-secondary" })
                        <button type="submit" class="btn btn-primary"><i class="fa fa-save me-1"></i> Lưu Thay Đổi</button>
                    </div>
                }
            </div>
        </div>
  

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
     $(function () {
         $('#CategoryId').change(function () {

             var categoryId = $(this).val();
             var $brand = $('#BrandId');

             $brand.empty();
             $brand.append($('<option>', { value: '', text: '-- Chọn thương hiệu --' }));

             if (categoryId) {
                 $.ajax({
                     url: '@Url.Action("GetBrandsByCategory","Product")',
                     type: 'POST',
                     data: { categoryId: categoryId },
                     success: function (data) {
                         $.each(data, function (i, brand) {
                             $brand.append($('<option>', { value: brand.Id, text: brand.Name }));
                         });
                     }
                 });
             }
         });
     });
    </script>

