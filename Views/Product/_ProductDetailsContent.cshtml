@model WEBVANDAP.Models.Product
@using System.Linq

@* File: Views/Product/_ProductDetailsContent.cshtml *@
@* Chứa các thông tin cơ bản và mô tả của sản phẩm (Dùng chung cho cả Admin/Client) *@

<div class="card p-4 mb-4">
    <h5 class="text-primary border-bottom pb-2">Thông tin cơ bản</h5>
    <dl class="row">
        <dt class="col-sm-3">Tên sản phẩm</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Giá bán</dt>
        <dd class="col-sm-9 text-danger fw-bold">@Model.Price.ToString("N0") VNĐ</dd>

        <dt class="col-sm-3">Danh mục</dt>
        <dd class="col-sm-9">@(Model.Category != null ? Model.Category.Name : "N/A")</dd>

        <dt class="col-sm-3">Thương hiệu</dt>
        <dd class="col-sm-9">@(Model.Brand != null ? Model.Brand.Name : "N/A")</dd>

        <dt class="col-sm-3">Tồn kho</dt>
        <dd class="col-sm-9">
            @if (Model.Stock > 0)
            {
                <span class="text-success fw-bold">Còn hàng (@Model.Stock)</span>
            }
            else
            {
                <span class="text-danger fw-bold">Hết hàng</span>
            }
        </dd>
    </dl>
</div>

<div class="card shadow-sm border-0 rounded-3 mt-3">
    <div class="card-body p-4 product-description-content">
        <h5 class="text-dark fs-5 fw-bold">MÔ TẢ CHI TIẾT SẢN PHẨM</h5>
        <hr />
        <div class="text-muted">
            @Html.Raw(Model.Description)
        </div>
    </div>
</div>