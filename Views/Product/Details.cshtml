@model WEBVANDAP.Models.Product
@using System.Linq

@{
    ViewBag.Title = "Quản lý sản phẩm: " + Model.Name;
    Layout = "~/Views/Shared/Layout2.cshtml";

    bool isAuthenticated = System.Web.HttpContext.Current.User.Identity.IsAuthenticated;
    bool isAdmin = isAuthenticated && System.Web.HttpContext.Current.User.IsInRole("Admin");

    var firstImage = Model.ProductImages.FirstOrDefault();
    string imageUrl = firstImage != null ? Url.Content(firstImage.Url) : Url.Content("~/Images/default_placeholder.jpg");
}

        <!-- Main content -->
        <div class="flex-grow-1 main-content">
            <div class="mb-4 d-flex justify-content-between align-items-center">
                <h2 class="fw-bold h4 mb-0">Chi tiết sản phẩm</h2>
                <i class="bi bi-box-seam fs-2 text-primary"></i>
            </div>

            <div class="row g-4">
                <!-- Carousel ảnh -->
                <div class="col-lg-6">
                    <div id="productCarousel" class="carousel slide card-product p-3">
                        <div class="carousel-inner">
                            @if (Model.ProductImages != null && Model.ProductImages.Any())
                            {
                                int i = 0;
                                foreach (var img in Model.ProductImages)
                                {
                                    <div class="carousel-item @(i==0?"active":"")">
                                        <img src="@Url.Content(img.Url)" alt="@Model.Name" />
                                    </div>
                                    i++;
                                }
                            }
                            else
                            {
                                <div class="carousel-item active">
                                    <img src="@imageUrl" alt="Placeholder">
                                </div>
                            }
                        </div>
                        @if (Model.ProductImages.Count > 1)
                        {
                            <button class="carousel-control-prev" type="button" data-bs-target="#productCarousel" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon"></span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#productCarousel" data-bs-slide="next">
                                <span class="carousel-control-next-icon"></span>
                            </button>
                        }
                    </div>
                </div>

                <!-- Thông tin sản phẩm -->
                <div class="col-lg-6">
                    <div class="card card-product p-4">
                        <div class="product-name">@Model.Name</div>
                        <div class="mb-2"><strong>Danh mục:</strong> @(Model.Category?.Name ?? "N/A")</div>
                        <div class="mb-2"><strong>Thương hiệu:</strong> @(Model.Brand?.Name ?? "N/A")</div>
                        <div class="price">@Model.Price.ToString("N0") VNĐ</div>
                        <div class="stock mb-3">Tình trạng: @(Model.Stock > 0 ? "Còn hàng" : "Hết hàng")</div>

                        @if (isAdmin)
                        {
                            <div class="action-buttons">
                                @Html.ActionLink("✏️ Sửa", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning" })
                                @Html.ActionLink("🗑️ Xóa", "Delete", new { id = Model.Id }, new { @class = "btn btn-danger" })
                                @Html.ActionLink("⬅️ Quản lý sản phẩm", "Index", "Product", null, new { @class = "btn btn-secondary" })
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Mô tả sản phẩm -->
            <div class="card card-product p-4 mt-4">
                <h5>Mô tả sản phẩm</h5>
                <p>@Html.Raw(Model.Description)</p>
            </div>

            <!-- Review -->
            <div class="card card-product mt-4">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-3">Đánh giá (@(Model.Reviews?.Count ?? 0))</h5>
                    @if (Model.Reviews != null && Model.Reviews.Any())
                    {
                        foreach (var review in Model.Reviews.OrderByDescending(r => r.CreatedAt))
                        {
                            <div class="review-card">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <strong>@(review.AspNetUser?.UserName ?? "Người dùng ẩn danh")</strong>
                                        <div class="review-star">
                                            @for (int i = 0; i < review.Rating; i++)
                                            {<i class="fas fa-star"></i>}
                                            @for (int i = 0; i < 5 - review.Rating; i++)
                                            {<i class="far fa-star"></i>}
                                        </div>
                                        <small class="text-muted">@review.CreatedAt</small>
                                    </div>
                                    @if (isAdmin)
                                    {
                                        using (Html.BeginForm("Delete", "Review", FormMethod.Post))
                                        {
                                            @Html.Hidden("id", review.Id)
                                            <button type="submit" class="btn btn-link text-danger" onclick="return confirm('Xóa đánh giá này?')">Xóa</button>
                                        }
                                    }
                                </div>
                                <p class="mt-2 mb-0">@review.Comment</p>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted text-center my-4">Chưa có đánh giá nào.</p>
                    }
                </div>
            </div>
        </div>
  

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
