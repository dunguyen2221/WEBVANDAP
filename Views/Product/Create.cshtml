    @model WEBVANDAP.Models.Product

    @{
        ViewBag.Title = "Tạo Sản Phẩm Mới";
        Layout = null;
    }

    <!DOCTYPE html>
    <html lang="vi">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>PMT Shop - Tạo Sản Phẩm Mới</title>

        <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

        <style>
            /* CSS Layout cố định mới */
            body {
                background-color: #fafbfe;
                font-family: 'Poppins', sans-serif;
                overflow-x: hidden;
            }

            .sidebar {
                width: 220px;
            }

            .main {
                flex-grow: 1;
                padding: 30px;
                margin-left: 0;
                background-color: #f0f2f5;
            }

            .wrapper {
                display: flex;
                min-height: 100vh;
            }

            /* CSS Form và Header */
            .dashboard-header {
                color: #2c3e50;
                font-weight: 700;
                text-align: center;
                margin-bottom: 2rem;
            }

            .card {
                border-radius: 12px;
                box-shadow: 0 3px 8px rgba(0, 0, 0, 0.08);
            }

            label {
                font-weight: 600;
            }
        </style>
    </head>

    <body>
        <div class="d-flex wrapper">
            <div class="sidebar d-flex flex-column flex-shrink-0 p-3 text-white bg-primary position-sticky top-0" style="height: 100vh;">

                <a class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none" href="@Url.Action("Index", "Admin")">
                    <img style="width: 32px; transform: scale(2.5);" class="img-fluid me-3"
                         src="@Url.Content("~/Content/IMG/logo.png")" alt="LogiT Logo">
                    <span class="fs-4 fw-bold">ADMIN</span>
                </a>
                <hr class="text-white opacity-25">

                <ul class="nav nav-pills flex-column mb-auto">
                    <li class="nav-item">
                        <a href="@Url.Action("Index", "Admin")" class="nav-link text-white fw-semibold"
                           aria-current="page">
                            <i class="bi bi-speedometer2 me-2"></i> Dashboard
                        </a>
                    </li>

                    <li class="nav-item mt-3">
                        <span class="text-white-50 text-uppercase small fw-bold">Management</span>
                    </li>

                    <li class="nav-item">
                        <a href="#submenu-sanpham" data-bs-toggle="collapse" class="nav-link active bg-light text-dark fw-semibold d-flex justify-content-between align-items-center">
                            <span><i class="bi bi-box-seam me-2"></i> Sản Phẩm</span>
                            <i class="bi bi-chevron-down small"></i>
                        </a>
                        <div class="collapse show" id="submenu-sanpham">
                            <ul class="nav flex-column ps-4">
                                <li><a href="@Url.Action("Index", "Product")" class="nav-link text-white-50">Xem tất cả</a></li>
                                <li><a href="@Url.Action("Create", "Product")" class="nav-link text-dark">Thêm mới</a></li>
                            </ul>
                        </div>
                    </li>

                    <li class="nav-item">
                        <a href="@Url.Action("ManageUsers", "User")" class="nav-link text-white">
                            <i class="bi bi-people me-2"></i> Users
                        </a>
                    </li>
                </ul>

                <div class="mt-auto pt-3 border-top border-2 border-white-50">
                    <a href="@Url.Action("DangXuat", "Account")" class="btn btn-sm btn-outline-light rounded-circle">
                        <i class="bi bi-chevron-left"></i>
                    </a>
                </div>
            </div>
            <main class="main flex-grow-1">
                <h2 class="dashboard-header">TẠO SẢN PHẨM MỚI</h2>

                <div class="card p-4">
                    @using (Html.BeginForm("Create", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "Vui lòng sửa các lỗi sau:", new { @class = "text-danger alert alert-danger" })

                            <div class="mb-3">
                                @Html.LabelFor(model => model.Name, "Tên Sản Phẩm:", new { @class = "form-label" })
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>

                            <div class="mb-3">
                                @Html.LabelFor(model => model.Price, "Giá Bán (VNĐ):", new { @class = "form-label" })
                                @Html.TextBoxFor(model => model.Price, new { @class = "form-control", @type = "number" })
                                @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                            </div>

                            <div class="mb-3">
                                @Html.LabelFor(model => model.Stock, "Tồn Kho:", new { @class = "form-label" })
                                @Html.TextBoxFor(model => model.Stock, new { @class = "form-control", @type = "number" })
                                @Html.ValidationMessageFor(model => model.Stock, "", new { @class = "text-danger" })
                            </div>

                            <div class="mb-3">
                                @Html.LabelFor(model => model.CategoryId, "Danh Mục:", new { @class = "form-label" })
                                @Html.DropDownList("CategoryId", null, "--- Chọn Danh Mục ---", new { @class = "form-select" })
                                @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
                            </div>

                            <div class="mb-3">
                                @Html.LabelFor(model => model.BrandId, "Thương Hiệu:", new { @class = "form-label" })
                                @Html.DropDownList("BrandId", null, "--- Chọn Thương Hiệu ---", new { @class = "form-select" })
                                @Html.ValidationMessageFor(model => model.BrandId, "", new { @class = "text-danger" })
                            </div>

                            <div class="mb-3">
                                @Html.LabelFor(model => model.Description, "Mô Tả Chi Tiết:", new { @class = "form-label" })
                                @Html.TextAreaFor(model => model.Description, 5, 80, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                            </div>

                            <div class="mb-4">
                                <label class="form-label" for="images">Tải Ảnh Sản Phẩm (Chọn nhiều file):</label>
                                <input type="file" name="images" id="images" multiple="multiple" accept="image/*" required />
                                <small class="form-text text-muted">Vui lòng chọn ít nhất một ảnh chính cho sản phẩm.</small>
                            </div>

                            <div class="d-flex justify-content-between mt-4">
                                <a href="@Url.Action("Index", "Product")" class="btn btn-secondary"><i class="fa fa-arrow-left me-1"></i> Quay lại</a>
                                <button type="submit" class="btn btn-primary"><i class="fa fa-save me-1"></i> Tạo Sản Phẩm</button>
                            </div>
                        </div>
                    }
                </div>
            </main>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
        <script>
            // Script sidebar giữ nguyên
        </script>
    </body>
    </html>