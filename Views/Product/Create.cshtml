@model WEBVANDAP.Models.Product

@{
    ViewBag.Title = "Tạo / Chỉnh sửa Sản phẩm";
    Layout = "~/Views/Shared/Layout2.cshtml";
}



        <!-- MAIN CONTENT -->
        <div class="main-content">

            <div class="top-admin-bar d-flex justify-content-between align-items-center">
                <h2 class="text-dark fw-bold h4 mb-0">@ViewBag.Title</h2>
                <i class="bi bi-box-seam fs-2 text-primary"></i>
            </div>

            <div class="card shadow-lg border-0 rounded-3 bg-white card-form p-4">

                @using (Html.BeginForm("Create", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    <!-- Product Name -->
                    <div class="mb-3">
                        @Html.LabelFor(m => m.Name, "Tên sản phẩm", new { @class = "form-label fw-bold" })
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Nhập tên sản phẩm..." })
                    </div>

                    <!-- Category -->
                    <div class="mb-3">
                        @Html.Label("Danh mục", new { @class = "form-label fw-bold" })
                        @Html.DropDownList("CategoryId",
                            (SelectList)ViewBag.CategoryId,
                            "-- Chọn danh mục --",
                            new { @class = "form-select", id = "CategoryId" })
                    </div>

                    <!-- Brand -->
                    <div class="mb-3">
                        @Html.Label("Thương hiệu", new { @class = "form-label fw-bold" })
                        @Html.DropDownList("BrandId",
                            (SelectList)ViewBag.BrandId,
                            "-- Chọn thương hiệu --",
                            new { @class = "form-select", id = "BrandId" })
                    </div>
                    <!-- Stock (Tồn kho) - đoạn mình thêm vào -->
                    <div class="mb-3">
                        @Html.LabelFor(m => m.Stock, "Tồn kho", new { @class = "form-label fw-bold" })
                        @Html.TextBoxFor(m => m.Stock,
                            new { @class = "form-control", type = "number", min = "0", placeholder = "Nhập số lượng tồn kho..." })
                    </div>

                    <!-- Price -->
                    <div class="mb-3">
                        @Html.Label("Giá sản phẩm", new { @class = "form-label fw-bold" })
                        @Html.TextBoxFor(m => m.Price,
                            new { @class = "form-control", type = "number", min = 0 })
                    </div>

                    <!-- Images -->
                    <div class="mb-3">
                        @Html.Label("Ảnh sản phẩm", new { @class = "form-label fw-bold" })
                        <input type="file" name="images" multiple class="form-control" />
                        <small class="text-muted">Có thể chọn nhiều hình</small>
                    </div>

                    <!-- Buttons -->
                    <div class="d-flex justify-content-between">
                        <a href="@Url.Action("Index","Product")" class="btn btn-secondary">Quay lại</a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-save me-1"></i> Lưu sản phẩm
                        </button>
                    </div>
                }
            </div>
        </div>
   

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- AJAX lọc thương hiệu theo danh mục -->
    <script>
        $(function () {
            $('#CategoryId').change(function () {

                var categoryId = $(this).val();
                var $brand = $('#BrandId');

                $brand.empty();
                $brand.append($('<option>', { value: '', text: '-- Chọn thương hiệu --' }));

                if (categoryId) {
                    $.ajax({
                        url: '@Url.Action("GetBrandsByCategory","Product")',
                        type: 'POST',
                        data: { categoryId: categoryId },
                        success: function (data) {
                            $.each(data, function (i, brand) {
                                $brand.append($('<option>', { value: brand.Id, text: brand.Name }));
                            });
                        }
                    });
                }
            });
        });
    </script>


