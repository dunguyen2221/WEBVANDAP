@model WEBVANDAP.Models.Product
@{
    ViewBag.Title = "Chi Tiết: " + Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool isAuthenticated = User.Identity.IsAuthenticated;
    bool isAdmin = isAuthenticated && User.IsInRole("Admin");
    string defaultImage = Url.Content("~/Images/default_placeholder.jpg");
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

    <style>
        :root {
            --primary: #dc3545; /* Đỏ giống giỏ hàng */
            --dark: #2c3e50;
            --light: #f8f9fa;
        }

        body {
            background-color: #f0f2f5;
            color: #333;
            line-height: 1.6;
        }

        .main-container-box {
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
            padding: 40px;
            margin-top: 30px;
            margin-bottom: 30px;
        }

        .category-badge {
            font-size: 0.9rem;
            color: #6c757d;
            text-transform: uppercase;
            letter-spacing: 1px;
            font-weight: 600;
            margin-bottom: 0.5rem;
            display: block;
        }

        .product-name {
            font-size: 2rem;
            font-weight: 700;
            color: var(--dark);
        }

        .price {
            font-size: 2.2rem;
            font-weight: 700;
            color: var(--primary);
        }

        .price-wrapper {
            background: #fafafa;
            padding: 15px 20px;
            border-radius: 8px;
            border: 1px dashed #ddd;
            display: inline-block;
            width: 100%;
            margin-bottom: 20px;
        }

        .thumbnail-img {
            height: 80px;
            width: 80px;
            object-fit: cover;
            border: 1px solid #ddd;
            border-radius: 6px;
            cursor: pointer;
            transition: all 0.2s;
            margin-right: 10px;
        }

            .thumbnail-img.active {
                border-color: var(--primary);
                border-width: 2px;
            }

        .star-rating {
            color: #ffc107;
        }

        .nav-tabs {
            border-bottom: 2px solid #eee;
        }

            .nav-tabs .nav-link {
                color: #555;
                font-weight: 600;
                padding: 12px 25px;
                border: none;
                border-bottom: 2px solid transparent;
            }

                .nav-tabs .nav-link.active {
                    color: var(--primary);
                    border-bottom: 2px solid var(--primary);
                    background: none;
                }

        .btn-add-to-cart {
            background: var(--primary);
            border: none;
            padding: 15px 30px;
            font-weight: 700;
            text-transform: uppercase;
            border-radius: 6px;
            transition: all 0.3s;
            width: 100%;
        }

            .btn-add-to-cart:hover {
                background: #bb2d3b;
                transform: translateY(-1px);
            }

        .quantity-btn {
            width: 45px;
            height: 54px;
            border: 1px solid #ced4da;
            background: #f8f9fa;
            font-weight: bold;
        }

        .quantity-input {
            height: 54px;
            border-top: 1px solid #ced4da;
            border-bottom: 1px solid #ced4da;
            border-left: none;
            border-right: none;
        }

        .review-avatar {
            width: 50px;
            height: 50px;
            background: var(--primary);
            color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 1.2rem;
        }

        .carousel-container {
            border: 1px solid #eee;
            border-radius: 8px;
            padding: 10px;
            background: #fff;
        }
    </style>
</head>
<body>
    <div class="container">
        <nav aria-label="breadcrumb" class="mt-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")" class="text-decoration-none text-muted">Trang chủ</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Index","Product")" class="text-decoration-none text-muted">Sản phẩm</a></li>
                @if (Model.Category != null)
                {
                    <li class="breadcrumb-item"><a href="#" class="text-decoration-none text-muted">@Model.Category.Name</a></li>
                }
                <li class="breadcrumb-item active fw-bold text-dark" aria-current="page">@Model.Name</li>
            </ol>
        </nav>

        <div class="main-container-box">
            <div class="row g-5">
                <div class="col-lg-6">
                    <div class="row g-3">
                        <div class="col-12">
                            <div id="mainCarousel" class="carousel slide carousel-container overflow-hidden" data-bs-ride="false">
                                <div class="carousel-inner">
                                    @if (Model.ProductImages != null && Model.ProductImages.Any())
                                    {
                                        int index = 0;
                                        foreach (var img in Model.ProductImages)
                                        {
                                            <div class="carousel-item @(index == 0 ? "active" : "")">
                                                <img src="@Url.Content(img.Url)" class="d-block w-100" alt="@Model.Name" style="height: 450px; object-fit: contain; background:#fff;">
                                            </div>
                                            index++;
                                        }
                                    }
                                    else
                                    {
                                        <div class="carousel-item active">
                                            <img src="@defaultImage" class="d-block w-100" alt="Placeholder" style="height: 450px; object-fit: contain;">
                                        </div>
                                    }
                                </div>
                                @if (Model.ProductImages?.Count > 1)
                                {
                                    <button class="carousel-control-prev" type="button" data-bs-target="#mainCarousel" data-bs-slide="prev">
                                        <span class="carousel-control-prev-icon bg-dark rounded-circle p-2" style="background-size: 50%"></span>
                                    </button>
                                    <button class="carousel-control-next" type="button" data-bs-target="#mainCarousel" data-bs-slide="next">
                                        <span class="carousel-control-next-icon bg-dark rounded-circle p-2" style="background-size: 50%"></span>
                                    </button>
                                }
                            </div>
                        </div>
                        @if (Model.ProductImages != null && Model.ProductImages.Count() > 1)
                        {
                            <div class="col-12">
                                <div class="d-flex overflow-auto pb-2 justify-content-center">
                                    @{
                                        int thumbIndex = 0;
                                        foreach (var img in Model.ProductImages)
                                        {
                                            <img src="@Url.Content(img.Url)"
                                                 class="thumbnail-img @(thumbIndex == 0 ? "active" : "")"
                                                 alt="thumb"
                                                 data-bs-target="#mainCarousel"
                                                 data-bs-slide-to="@thumbIndex">
                                            thumbIndex++;
                                        }
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <div class="col-lg-6">
                    <span class="category-badge">@((Model.Category?.Name ?? "Chưa phân loại").ToUpper())</span>

                    <h1 class="product-name mb-2">@Model.Name</h1>

                    <div class="d-flex flex-wrap align-items-center gap-3 mb-4 border-bottom pb-3">
                        <div class="star-rating fs-5">
                            @for (int i = 1; i <= 5; i++)
                            {
                                if (i <= (Model.Reviews?.Average(r => r.Rating) ?? 0))
                                {<i class="fas fa-star"></i> }
                                else if (i - 0.5 <= (Model.Reviews?.Average(r => r.Rating) ?? 0))
                                { <i class="fas fa-star-half-alt"></i> }
                                else
                                { <i class="far fa-star"></i>}
                            }
                        </div>
                        <span class="text-muted border-start ps-3">@(Model.Reviews?.Count ?? 0) Đánh giá</span>
                        <span class="text-muted border-start ps-3">Thương hiệu: <strong>@(Model.Brand?.Name ?? "N/A")</strong></span>
                        <span class="text-muted border-start ps-3">Danh mục: <strong>@(Model.Category?.Name ?? "N/A")</strong></span>
                    </div>

                    <div class="price-wrapper">
                        <span class="price">@Model.Price.ToString("N0") ₫</span>
                        <div class="mt-1 text-muted">
                            <span class="badge bg-success badge-stock">
                                <i class="fas fa-check-circle me-1"></i>
                                @(Model.Stock > 0 ? $"Còn {Model.Stock} sản phẩm" : "Hết hàng")
                            </span>
                        </div>
                    </div>

                    <div class="mb-4 text-muted">
                        <p class="mb-1"><i class="fas fa-shipping-fast me-2"></i>Miễn phí vận chuyển toàn quốc</p>
                        <p class="mb-1"><i class="fas fa-shield-alt me-2"></i>Bảo hành chính hãng 12 tháng</p>
                        <p class="mb-0"><i class="fas fa-undo me-2"></i>Đổi trả trong 30 ngày</p>
                    </div>

                    @if (isAdmin)
                    {
                        <div class="d-flex gap-3 flex-wrap mt-5">
                            @Html.ActionLink("Sửa sản phẩm", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning" })
                            @Html.ActionLink("Xóa sản phẩm", "Delete", new { id = Model.Id }, new { @class = "btn btn-danger", onclick = "return confirm('Xóa sản phẩm này?')" })
                            @Html.ActionLink("Quay lại danh sách", "Index", "Product", null, new { @class = "btn btn-secondary" })
                        </div>
                    }
                    else if (Model.Stock > 0)
                    {
                        <form method="post" action="@Url.Action("AddToCart","Cart")" class="mt-4">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="productId" value="@Model.Id" />

                            <div class="row g-2">
                                <div class="col-3">
                                    <div class="input-group">
                                        <button type="button" class="btn quantity-btn" id="minus">-</button>
                                        <input type="number" name="quantity" id="quantity" class="form-control text-center fw-bold quantity-input" value="1" min="1" max="@Model.Stock" readonly>
                                        <button type="button" class="btn quantity-btn" id="plus">+</button>
                                    </div>
                                </div>
                                <div class="col-9">
                                    <button type="submit" class="btn btn-add-to-cart text-white h-100">
                                        <i class="fas fa-cart-plus me-2"></i> THÊM VÀO GIỎ
                                    </button>
                                </div>
                            </div>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-danger mt-4">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Sản phẩm tạm thời hết hàng!</strong>
                        </div>
                    }
                </div>
            </div>

            <div class="mt-5 pt-4 border-top">
                <ul class="nav nav-tabs mb-4" id="productTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="desc-tab" data-bs-toggle="tab" data-bs-target="#description" type="button">Mô tả sản phẩm</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="review-tab" data-bs-toggle="tab" data-bs-target="#reviews" type="button">
                            Đánh giá khách hàng (@(Model.Reviews?.Count ?? 0))
                        </button>
                    </li>
                </ul>

                <div class="tab-content">
                    <div class="tab-pane fade show active" id="description">
                        <div class="p-2">
                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                @Html.Raw(Model.Description)
                            }
                            else
                            {
                                <p class="text-muted fst-italic">Chưa có mô tả cho sản phẩm này.</p>
                            }
                        </div>
                    </div>

                    <div class="tab-pane fade" id="reviews">
                        <div class="p-2">
                            @if (Session["UserId"] != null)
                            {
                                <div class="bg-light p-4 rounded-3 mb-5 border">
                                    <h5 class="fw-bold mb-3">Đánh giá sản phẩm này</h5>
                                    @using (Html.BeginForm("Create", "Review", FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.Hidden("productId", Model.Id)
                                        <div class="row g-3">
                                            <div class="col-md-3">
                                                <select name="rating" class="form-select border-secondary" required>
                                                    <option value="5">5 Sao (Tuyệt vời)</option>
                                                    <option value="4">4 Sao (Tốt)</option>
                                                    <option value="3">3 Sao (Bình thường)</option>
                                                    <option value="2">2 Sao (Tệ)</option>
                                                    <option value="1">1 Sao (Rất tệ)</option>
                                                </select>
                                            </div>
                                            <div class="col-md-9">
                                                <div class="input-group">
                                                    <input type="text" name="content" class="form-control border-secondary" placeholder="Nhập nội dung đánh giá..." required>
                                                    <button type="submit" class="btn btn-primary px-4">
                                                        <i class="fas fa-paper-plane"></i> Gửi
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-warning mb-4">
                                    Bạn cần <a href="@Url.Action("DangNhap", "Account")" class="alert-link">đăng nhập</a> để viết đánh giá.
                                </div>
                            }

                            @if (Model.Reviews != null && Model.Reviews.Any())
                            {
                                foreach (var review in Model.Reviews.OrderByDescending(r => r.CreatedAt))
                                {
                                    <div class="d-flex gap-3 mb-4 pb-4 border-bottom">
                                        <div class="review-avatar flex-shrink-0">
                                            @(review.AspNetUser?.UserName?.Substring(0,1).ToUpper() ?? "U")
                                        </div>
                                        <div class="flex-grow-1">
                                            <div class="d-flex justify-content-between">
                                                <h6 class="fw-bold mb-1">@(review.AspNetUser?.UserName ?? "Ẩn danh")</h6>
                                                <div class="star-rating small">
                                                    @for (int s = 1; s <= 5; s++)
                                                    {
                                                        if (s <= review.Rating)
                                                        {<i class="fas fa-star"></i> }
                                                        else
                                                        { <i class="far fa-star"></i>}
                                                    }
                                                </div>
                                            </div>
                                            <small class="text-muted d-block mb-2">@review.CreatedAt</small>
                                            <p class="mb-0 text-dark">@review.Comment</p>

                                            @if (User.IsInRole("Admin"))
                                            {
                                                using (Html.BeginForm("Delete", "Review", FormMethod.Post, new { @class = "mt-2" }))
                                                {
                                                    @Html.Hidden("id", review.Id)
                                                    <button type="submit" class="btn btn-sm btn-outline-danger py-0 px-2"
                                                            onclick="return confirm('Xóa đánh giá này?')">
                                                        Xóa
                                                    </button>
                                                }
                                            }
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="text-center text-muted py-5 border rounded bg-light">
                                    <i class="far fa-comment-dots fa-3x mb-3"></i>
                                    <p>Chưa có đánh giá nào. Hãy là người đầu tiên đánh giá!</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const quantity = document.getElementById('quantity');
            const plus = document.getElementById('plus');
            const minus = document.getElementById('minus');
            const max = parseInt(quantity.max);

            if (plus && minus && quantity) {
                plus.addEventListener('click', () => {
                    let val = parseInt(quantity.value);
                    if (val < max) quantity.value = val + 1;
                });

                minus.addEventListener('click', () => {
                    let val = parseInt(quantity.value);
                    if (val > 1) quantity.value = val - 1;
                });
            }

            document.querySelectorAll('.thumbnail-img').forEach(img => {
                img.addEventListener('click', function () {
                    document.querySelectorAll('.thumbnail-img').forEach(i => i.classList.remove('active'));
                    this.classList.add('active');
                });
            });
        });
    </script>
</body>
</html>