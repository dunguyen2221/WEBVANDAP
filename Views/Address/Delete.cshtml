@model WEBVANDAP.Models.Address
@{
    ViewBag.Title = "Xóa địa chỉ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <h2 class="fw-bold mb-4 text-uppercase text-dark">
        <i class="bi bi-trash3 text-danger me-2"></i> Xóa địa chỉ
    </h2>

    <div class="alert alert-warning shadow-sm rounded-4 p-4">
        <p class="mb-3">Bạn có chắc chắn muốn xóa địa chỉ sau không?</p>

        <p class="fw-semibold">
            @(Model.Street + ", " + Model.Ward + ", " + Model.District + ", " + Model.City)
        </p>

        @using (Html.BeginForm("Delete", "Address", new { id = Model.Id }, FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="mt-4">
                <button type="submit" class="btn btn-danger px-4 me-2">
                    <i class="bi bi-trash3 me-1"></i> Xóa
                </button>
                <a href="@Url.Action("Index", "Address")" class="btn btn-outline-dark px-4">
                    Hủy
                </a>
            </div>
        }
    </div>
</div>
