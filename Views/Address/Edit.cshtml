@model WEBVANDAP.Models.Address

@{
    ViewBag.Title = "Sửa địa chỉ";
}

<h2>Sửa địa chỉ</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <div class="form-group mb-3">
        <label>Họ và tên</label>
        @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.FullName)
    </div>

    <div class="form-group mb-3">
        <label>Số điện thoại</label>
        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Phone)
    </div>

    <div class="form-group mb-3">
        <label>Đường / Số nhà</label>
        @Html.TextBoxFor(m => m.Street, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Street)
    </div>

    <div class="form-group mb-3">
        <label>Phường / Xã</label>
        @Html.TextBoxFor(m => m.Ward, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Ward)
    </div>

    <div class="form-group mb-3">
        <label>Quận / Huyện</label>
        @Html.TextBoxFor(m => m.District, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.District)
    </div>

    <div class="form-group mb-3">
        <label>Tỉnh / Thành phố</label>
        @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.City)
    </div>

    <div class="form-check mb-3">
        <div class="form-check mb-3">
            @Html.CheckBox("IsDefault", Model.IsDefault ?? false, new { @class = "form-check-input" })
            <label class="form-check-label">Đặt làm địa chỉ mặc định</label>
        </div>
        <label class="form-check-label">Đặt làm địa chỉ mặc định</label>
    </div>

    <button type="submit" class="btn btn-primary">Cập nhật</button>
    <a href="@Url.Action("Index", "Address")" class="btn btn-secondary">Hủy</a>
}
