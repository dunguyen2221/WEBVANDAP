@model WEBVANDAP.Models.Address
@{
    ViewBag.Title = "Thêm địa chỉ";
}

<h2>Thêm địa chỉ</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group mb-3">
        <label>Họ và tên</label>
        @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", placeholder = "Nhập họ và tên" })
        @Html.ValidationMessageFor(m => m.FullName)
    </div>

    <div class="form-group mb-3">
        <label>Số điện thoại</label>
        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", placeholder = "Nhập số điện thoại" })
        @Html.ValidationMessageFor(m => m.Phone)
    </div>

    <div class="form-group mb-3">
        <label>Đường / Số nhà</label>
        @Html.TextBoxFor(m => m.Street, new { @class = "form-control", placeholder = "Nhập đường / số nhà" })
        @Html.ValidationMessageFor(m => m.Street)
    </div>

    <div class="form-group mb-3">
        <label>Phường / Xã</label>
        @Html.TextBoxFor(m => m.Ward, new { @class = "form-control", placeholder = "Nhập phường / xã" })
        @Html.ValidationMessageFor(m => m.Ward)
    </div>

    <div class="form-group mb-3">
        <label>Quận / Huyện</label>
        @Html.TextBoxFor(m => m.District, new { @class = "form-control", placeholder = "Nhập quận / huyện" })
        @Html.ValidationMessageFor(m => m.District)
    </div>

    <div class="form-group mb-3">
        <label>Tỉnh / Thành phố</label>
        @Html.TextBoxFor(m => m.City, new { @class = "form-control", placeholder = "Nhập tỉnh / thành phố" })
        @Html.ValidationMessageFor(m => m.City)
    </div>

    <div class="form-check mb-3">
        @Html.CheckBox("IsDefault", (Model != null && Model.IsDefault == true), new { @class = "form-check-input" })
        <label class="form-check-label">Đặt làm địa chỉ mặc định</label>
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a href="@Url.Action("Index", "Address")" class="btn btn-secondary">Trở lại</a>
}
