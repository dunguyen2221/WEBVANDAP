@model IEnumerable<WEBVANDAP.Models.Address>

@{
    ViewBag.Title = "Danh sách địa chỉ - LogiT Shop";
    Layout = "~/Views/Shared/_Layout.cshtml"; // 1. Sử dụng Layout chung
}

@section Styles {
    <style>
        /* Chỉ giữ lại CSS cần thiết cho nội dung trang này */
        body {
            background-color: #f5f5f5;
        }

        .address-card {
            border: none;
            border-radius: 14px;
            background: #fff;
            box-shadow: 0 4px 20px rgba(0,0,0,0.08);
            padding: 1.5rem;
            transition: all .3s ease;
        }

            .address-card:hover {
                transform: translateY(-4px);
                box-shadow: 0 6px 25px rgba(0,0,0,0.12);
            }

        .floating-contact {
            display: none;
        }
    </style>
}

<div class="container my-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold text-dark">
            <i class="bi bi-geo-alt-fill text-danger me-2"></i>
            Danh sách địa chỉ
        </h3>

        <a href="@Url.Action("Create","Address")" class="btn btn-danger px-4 rounded-pill">
            <i class="bi bi-plus-circle"></i> Thêm địa chỉ
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="address-card h-100">

                        <h5 class="fw-bold text-dark mb-2">
                            <i class="bi bi-house-door text-primary me-1"></i> Địa chỉ
                        </h5>

                        <p class="text-muted mb-3">
                            @($"{item.Street}, {item.Ward}, {item.District}, {item.City}")
                        </p>

                        <div class="d-flex justify-content-between mt-3">
                            <a href="@Url.Action("Edit","Address", new { id = item.Id })"
                               class="btn btn-warning btn-sm px-3">
                                <i class="bi bi-pencil-square"></i> Sửa
                            </a>

                            <a href="@Url.Action("Delete","Address", new { id = item.Id })"
                               class="btn btn-danger btn-sm px-3">
                                <i class="bi bi-trash"></i> Xóa
                            </a>
                        </div>

                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-light text-center border py-5">
            <i class="bi bi-emoji-frown fs-1 text-secondary"></i>
            <p class="mt-3 mb-0">Bạn chưa có địa chỉ nào.</p>
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success mt-4">
            <i class="bi bi-check-circle-fill me-2"></i>
            @TempData["SuccessMessage"]
        </div>
    }

    <div class="mt-5">
        <a href="@Url.Action("Index","User")" class="btn btn-outline-dark rounded-pill px-4">
            <i class="bi bi-arrow-left"></i> Quay lại Hồ sơ
        </a>
    </div>

</div>