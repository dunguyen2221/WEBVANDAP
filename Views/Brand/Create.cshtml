@model WEBVANDAP.Models.Brand

@{
    ViewBag.Title = "Tạo Thương Hiệu Mới";
    Layout = "~/Views/Shared/Layout2.cshtml"; // Sử dụng Layout Admin nhúng
}


        <div class="main-content d-flex flex-column">

            <div class="top-admin-bar d-flex justify-content-between align-items-center">
                <h2 class="text-dark fw-bold h4 mb-0">Tạo Thương Hiệu Mới</h2>
                <i class="fa fa-tags fs-2 text-primary"></i>
            </div>

            <div class="card card-form border-0 bg-white p-4">

                @using (Html.BeginForm("Create", "Brand", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Name, "Tên Thương Hiệu", new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "VD: Logitech, Dell, Intel..." })
                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger small" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.CategoryId, "Danh Mục Thuộc", new { @class = "form-label fw-bold" })

                        @Html.DropDownListFor(
                            m => m.CategoryId,
                            new SelectList(ViewBag.Categories, "Id", "Name"),
                            "-- Chọn danh mục --",
                            new { @class = "form-select" }
                        )

                        @Html.ValidationMessageFor(m => m.CategoryId, "", new { @class = "text-danger" })
                    </div>


                    <div class="d-flex justify-content-between pt-2 gap-5">
                        <a href="@Url.Action("Index", "Brand")" class="btn btn-outline-secondary px-4">
                            <i class="fa fa-arrow-left me-2"></i> Quay lại
                        </a>

                        <button type="submit" class="btn btn-success px-4">
                            <i class="fa fa-save me-2"></i> Lưu Thương Hiệu
                        </button>
                    </div>
                }

            </div>
        </div>
   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
