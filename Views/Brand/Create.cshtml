@model WEBVANDAP.Models.Brand

@{
    ViewBag.Title = "Tạo Thương Hiệu Mới";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2 class="text-center mb-4">TẠO THƯƠNG HIỆU MỚI</h2>

@using (Html.BeginForm("Create", "Brand", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="card p-4 shadow-sm">

        <div class="mb-3">
            @Html.LabelFor(m => m.Name, "Tên Thương Hiệu", new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "VD: Logitech, Dell, Intel…" })
            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.Logo, "Logo (URL)", new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(m => m.Logo, new { @class = "form-control", placeholder = "https://your-logo.png" })
            @Html.ValidationMessageFor(m => m.Logo, "", new { @class = "text-danger" })
        </div>

        <div class="d-flex justify-content-between">
            <a href="@Url.Action("Index", "Brand")" class="btn btn-secondary">
                Quay lại
            </a>

            <button type="submit" class="btn btn-primary">
                <i class="fa fa-save me-1"></i> Lưu Thương Hiệu
            </button>
        </div>

    </div>
}
