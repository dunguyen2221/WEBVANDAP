@model WEBVANDAP.Models.Brand

@{
    ViewBag.Title = "Xóa thương hiệu: " + Model.Name;
    Layout = "~/Views/Shared/Layout2.cshtml";
}

<style>
    /* Chỉ áp dụng cho trang Delete Brand */

    .delete-wrapper {
        max-width: 700px;
        margin: 0 auto;
        margin-top: 40px;
        margin-bottom: 40px;
    }

    .delete-card {
        background: #ffffff;
        padding: 35px;
        border-radius: 16px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.08);
        border-left: 6px solid #dc3545;
        transition: 0.2s;
    }

        .delete-card:hover {
            box-shadow: 0 10px 24px rgba(0,0,0,0.12);
        }

    .delete-title {
        font-size: 26px;
        font-weight: 700;
        color: #dc3545;
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .delete-title i {
            font-size: 32px;
        }

    .delete-info {
        background: #fff5f5;
        padding: 15px;
        border-radius: 10px;
        border: 1px solid #f1c4c4;
        margin-top: 20px;
    }

    .btn-cancel {
        border: 1px solid #6c757d;
        color: #6c757d;
        background: #f8f9fa;
        transition: 0.2s;
    }

        .btn-cancel:hover {
            background: #e2e6ea;
        }
</style>

<main class="main-content">

    <div class="delete-wrapper">

        <div class="delete-title mb-4">
            <i class="fa fa-exclamation-triangle"></i>
            Xác nhận xóa thương hiệu
        </div>

        <div class="delete-card">

            <p class="fs-5">
                Bạn có chắc chắn muốn xóa thương hiệu
                <strong class="text-danger">@Model.Name</strong>?
            </p>

            <div class="delete-info mt-3">
                <p class="mb-1"><strong>Danh mục:</strong> @((Model.Category != null ? Model.Category.Name : "Chưa phân loại"))</p>
                <p class="text-danger mb-0"><small>* Hành động này không thể hoàn tác *</small></p>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="mt-4 d-flex justify-content-center gap-3">
                    <button type="submit" class="btn btn-danger px-4 py-2">
                        <i class="fa fa-trash me-2"></i> Xóa vĩnh viễn
                    </button>

                    @Html.ActionLink("Hủy", "Index", null,
                        new { @class = "btn btn-cancel px-4 py-2" })
                </div>
            }
        </div>

    </div>

</main>
