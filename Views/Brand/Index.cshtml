@model IEnumerable<WEBVANDAP.Models.Brand>

@{
    ViewBag.Title = "Quản lý Thương hiệu";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - PMT Admin</title>

    <!-- Font + Bootstrap + Icons -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    <style>
        /* === BASE === */
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #fafbfe;
            margin: 0;
            padding: 0;
            overflow-x: hidden;
        }

        .wrapper {
            display: flex;
            min-height: 100vh;
        }

        /* === SIDEBAR === */
        #sidebar {
            width: 70px;
            min-width: 70px;
            background-color: #0e223e;
            color: #fff;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            transition: width 0.3s ease-in-out;
            position: fixed;
            height: 100vh;
            top: 0;
            left: 0;
            border: none !important;
            box-shadow: none !important;
        }

            #sidebar.expand {
                width: 260px;
            }

            #sidebar .d-flex {
                align-items: center;
                background: #0e223e;
                padding: 0.8rem 1.2rem;
            }

        #toggle-btn {
            background: transparent;
            border: none;
            cursor: pointer;
            padding: 0.5rem;
            margin-right: 0.6rem;
            transition: all 0.2s ease-in-out;
        }

            #toggle-btn i {
                font-size: 22px;
                color: #fff;
                transition: all 0.2s ease-in-out;
            }

            /* Hiệu ứng hover nút 3 gạch */
            #toggle-btn:hover i {
                color: #3b7dd3;
                transform: scale(1.15);
            }

        .sidebar-logo {
            font-weight: 600;
            color: #fff;
            margin-bottom: 0;
            font-size: 1.1rem;
        }

        .sidebar-nav {
            flex-grow: 1;
            padding: 1rem 0;
        }

        a.sidebar-link {
            display: block;
            color: #fff;
            padding: 0.75rem 1.5rem;
            border-left: 3px solid transparent;
            transition: all 0.2s;
            text-decoration: none;
            white-space: nowrap;
        }

            a.sidebar-link:hover {
                background-color: rgba(255, 255, 255, 0.1);
                border-left-color: #3b7dd3;
            }

        /* Ẩn text khi thu gọn */
        #sidebar:not(.expand) a.sidebar-link span,
        #sidebar:not(.expand) .sidebar-logo {
            display: none;
        }

        .sidebar-footer {
            padding: 1rem 1.5rem;
            border-top: none !important;
        }

        /* === MAIN CONTENT === */
        .main-content {
            flex-grow: 1;
            padding: 30px;
            margin-left: 70px;
            transition: margin-left 0.3s ease-in-out;
            width: calc(100% - 70px);
        }

        #sidebar.expand + .main-content {
            margin-left: 260px;
            width: calc(100% - 260px);
        }

        h2.dashboard-header {
            color: #2c3e50;
            font-weight: 700;
            text-align: center;
            margin-bottom: 2rem;
        }

        hr {
            margin: 1rem 0 2rem;
            opacity: 0.2;
        }

        /* === CARD + TABLE === */
        .card {
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 3px 8px rgba(0, 0, 0, 0.08);
            padding: 25px;
            border: none;
        }

        .top-bar {
            display: flex;
            justify-content: space-between;
            margin-bottom: 15px;
            flex-wrap: wrap;
            gap: 10px;
        }

        .btn-success {
            background-color: #27ae60;
            color: #fff;
            border: none;
        }

        .btn-info {
            background-color: #16a085;
            color: #fff;
            border: none;
        }

        .table thead {
            background-color: #3498db;
            color: #fff;
        }

        .table th, .table td {
            padding: 12px 15px;
            text-align: left;
        }

        .table tbody tr:hover {
            background-color: #f1f8ff;
        }

        .action-buttons {
            display: flex;
            justify-content: center;
            gap: 8px;
        }
    </style>
</head>

<body>
    <div class="wrapper">
        <!-- SIDEBAR -->
        <aside id="sidebar">
            <div>
                <div class="d-flex">
                    <button id="toggle-btn">
                        <i class="fa-solid fa-bars"></i>
                    </button>
                    <div class="sidebar-logo">PMT Admin</div>
                </div>

                <nav class="sidebar-nav">
                    <a href="@Url.Action("Index", "Admin")" class="sidebar-link"><i class="fa fa-home me-2"></i><span>Dashboard</span></a>
                    <a href="@Url.Action("Index", "Product")" class="sidebar-link"><i class="fa fa-box me-2"></i><span>Quản lý Sản phẩm</span></a>
                    <a href="@Url.Action("Index", "Category")" class="sidebar-link"><i class="fa fa-list-alt me-2"></i><span>Quản lý Danh mục</span></a>
                    <a href="@Url.Action("Index", "Brand")" class="sidebar-link"><i class="fa fa-tags me-2"></i><span>Quản lý Thương hiệu</span></a>
                    <a href="@Url.Action("Index", "Order")" class="sidebar-link"><i class="fa fa-shopping-cart me-2"></i><span>Quản lý Đơn hàng</span></a>
                </nav>
            </div>

            <div class="sidebar-footer">
                <a href="@Url.Action("DangXuat", "Account")" class="sidebar-link"><i class="fa fa-sign-out-alt me-2"></i><span>Đăng xuất</span></a>
            </div>
        </aside>

        <!-- MAIN -->
        <main class="main-content">
            <h2 class="dashboard-header">QUẢN LÝ THƯƠNG HIỆU</h2>
            <hr />

            <div class="top-bar">
                @Html.ActionLink("➕ Tạo Thương Hiệu Mới", "Create", null, new { @class = "btn btn-success" })
                @Html.ActionLink("🏠 Về Dashboard", "Index", "Admin", null, new { @class = "btn btn-info" })
            </div>

            <div class="card">
                <table class="table table-striped table-hover align-middle">
                    <thead>
                        <tr>
                            <th style="width:10%">ID</th>
                            <th style="width:40%">Tên Thương Hiệu</th>
                            <th style="width:30%">Danh Mục Thuộc Về</th>
                            <th style="width:20%" class="text-center">Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Name</td>
                                    <td>@(item.Category != null ? item.Category.Name : "Chưa phân loại")</td>
                                    <td class="text-center action-buttons">
                                        @Html.ActionLink("Sửa", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-primary" })
                                        @Html.ActionLink("Xóa", "Delete", new { id = item.Id }, new { @class = "btn btn-sm btn-danger" })
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted">Chưa có thương hiệu nào được tạo.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </main>
    </div>

    <!-- JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const sidebar = document.getElementById('sidebar');
        const toggleBtn = document.getElementById('toggle-btn');
        toggleBtn.addEventListener('click', () => {
            sidebar.classList.toggle('expand');
        });
    </script>
</body>
</html>
