@model IEnumerable<WEBVANDAP.Models.Brand>

@{
    ViewBag.Title = "Quản lý Thương hiệu - LogiT Shop";
    Layout = "~/Views/Shared/Layout2.cshtml";
}

        <!-- Main content -->
        <div class="flex-grow-1 p-4 d-flex flex-column main-content">

            <div class="top-admin-bar d-flex justify-content-between align-items-center">
                <h2 class="text-dark fw-bold h4 mb-0">Quản lý Thương Hiệu</h2>
                <i class="bi bi-tags fs-2 text-primary"></i>
            </div>

            <div class="d-flex justify-content-between mb-3">
                @Html.ActionLink("➕ Tạo Thương Hiệu Mới", "Create", null, new { @class = "btn btn-success" })
                @Html.ActionLink("🏠 Về Dashboard", "Index", "Admin", null, new { @class = "btn btn-info" })
            </div>

            <div class="card card-custom">
                <div class="card-body p-4">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th style="width:10%">ID</th>
                                    <th style="width:40%">Tên Thương Hiệu</th>
                                    <th style="width:30%">Danh Mục Thuộc Về</th>
                                    <th style="width:20%" class="text-center">Thao Tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.Name</td>
                                            <td>@(item.Category != null ? item.Category.Name : "Chưa phân loại")</td>
                                            <td class="text-center action-buttons">
                                                @Html.ActionLink("Sửa", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-primary" })
                                                @Html.ActionLink("Xóa", "Delete", new { id = item.Id }, new { @class = "btn btn-sm btn-danger" })
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center text-muted">Chưa có thương hiệu nào được tạo.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
 

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

