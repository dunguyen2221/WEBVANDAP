@model WEBVANDAP.Models.Brand

@{
    ViewBag.Title = "Chỉnh sửa Thương hiệu: " + Model.Name;
    Layout = "~/Views/Shared/Layout2.cshtml";
}



        <!-- Main content -->
        <main class="main-content">
            <h2 class="dashboard-header">CHỈNH SỬA THƯƠNG HIỆU</h2>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Id)

                <div class="card p-4">
                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                    <div class="mb-3">
                        @Html.LabelFor(model => model.Name, "Tên Thương Hiệu:", new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(model => model.CategoryId, "Danh Mục Thuộc Về:", new { @class = "form-label" })
                        @Html.DropDownList("CategoryId", null, "-- Chọn danh mục --", new { @class = "form-select" })
                        @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
                    </div>

                    <!-- Fix lỗi bool? -->
                    <div class="form-check mb-3">
                        @{
                            bool isChecked = Model.IsActive ?? false;
                        }
                        @Html.CheckBox("IsActive", isChecked, new { @class = "form-check-input" })
                        @Html.LabelFor(model => model.IsActive, "Kích hoạt (hiển thị)", new { @class = "form-check-label" })
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        @Html.ActionLink("← Quay lại Danh sách", "Index", null, new { @class = "btn btn-secondary" })
                        <button type="submit" class="btn btn-primary"><i class="fa fa-save me-1"></i> Lưu thay đổi</button>
                    </div>
                </div>
            }
        </main>
   
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const sidebar = document.getElementById('sidebar');
        const toggleBtn = document.getElementById('toggle-btn');
        toggleBtn.addEventListener('click', () => sidebar.classList.toggle('expand'));
    </script>

