@model WEBVANDAP.Models.ChangePasswordViewModel

@{
    ViewBag.Title = "Đổi mật khẩu - LogiT Shop";
    Layout = "~/Views/Shared/_Layout.cshtml"; // 1. Sử dụng Layout chung
}

@section Styles {
    <style>
        /* Chỉ giữ lại CSS cần thiết cho nội dung trang này */
        body {
            background-color: #f5f5f5;
        }

        .password-card {
            border: none;
            background: #fff;
            border-radius: 14px;
            padding: 2rem;
            box-shadow: 0 4px 20px rgba(0,0,0,0.08);
            transition: all .3s ease;
        }

            .password-card:hover {
                transform: translateY(-4px);
                box-shadow: 0 6px 25px rgba(0,0,0,0.12);
            }

        .floating-contact {
            display: none;
        }
    </style>
}

<div class="container" style="max-width: 650px; margin-top: 50px; margin-bottom: 50px;">
    <div class="password-card">

        <h3 class="fw-bold mb-4 text-dark text-center">
            <i class="bi bi-shield-lock-fill text-primary me-2"></i>
            Đổi mật khẩu
        </h3>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success mb-4">
                <i class="bi bi-check-circle-fill me-2"></i>
                @TempData["SuccessMessage"]
            </div>
        }

        @using (Html.BeginForm("ChangePassword", "User", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="mb-3">
                @Html.LabelFor(m => m.OldPassword, new { @class = "fw-semibold form-label" })
                @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control form-control-lg", placeholder = "Nhập mật khẩu hiện tại" })
                <span class="text-danger small">@Html.ValidationMessageFor(m => m.OldPassword)</span>
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.NewPassword, new { @class = "fw-semibold form-label" })
                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control form-control-lg", placeholder = "Nhập mật khẩu mới" })
                <span class="text-danger small">@Html.ValidationMessageFor(m => m.NewPassword)</span>
            </div>

            <div class="mb-4">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "fw-semibold form-label" })
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control form-control-lg", placeholder = "Xác nhận mật khẩu mới" })
                <span class="text-danger small">@Html.ValidationMessageFor(m => m.ConfirmPassword)</span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg">Đổi mật khẩu</button>
            </div>
        }

        <div class="mt-4 text-center">
            <a href="@Url.Action("Index", "User")" class="btn btn-outline-dark rounded-pill px-4">
                <i class="bi bi-arrow-left me-1"></i> Quay lại Hồ sơ
            </a>
        </div>

    </div>
</div>