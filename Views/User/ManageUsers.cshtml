@model IEnumerable<WEBVANDAP.Models.AspNetUser>

@{
    ViewBag.Title = "Quản Lý Người Dùng";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Admin LogiT Shop</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <style>
        body {
            background-color: #f8fafc;
            font-family: "Segoe UI", sans-serif;
        }

        .sidebar {
            width: 220px;
        }

        .main-content {
            padding: 30px;
            background-color: #f0f2f5;
        }
    </style>
</head>

<body class="bg-body-tertiary">
    <div class="d-flex" style="min-height: 100vh;">

        <div class="sidebar d-flex flex-column flex-shrink-0 p-3 text-white bg-primary position-sticky top-0" style="height: 100vh;">
            <a class="d-flex align-items-center mb-3 text-white text-decoration-none" href="@Url.Action("Index", "Admin")">
                <img style="width: 32px; transform: scale(2.5);" class="img-fluid me-3"
                     src="@Url.Content("~/Content/IMG/logo.png")" alt="LogiT Logo" />
                <span class="fs-4 fw-bold">ADMIN</span>
            </a>

            <hr class="text-white opacity-25">

            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a href="@Url.Action("Index", "Admin")" class="nav-link text-white fw-semibold">
                        <i class="bi bi-speedometer2 me-2"></i> Dashboard
                    </a>
                </li>

                <li class="nav-item mt-3 text-white-50 text-uppercase small fw-bold">Management</li>

                <li class="nav-item">
                    <a href="#submenu-sanpham" data-bs-toggle="collapse"
                       class="nav-link text-white d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-box-seam me-2"></i> Sản Phẩm</span>
                        <i class="bi bi-chevron-down small"></i>
                    </a>
                    <div class="collapse" id="submenu-sanpham">
                        <ul class="nav flex-column ps-4">
                            <li><a href="@Url.Action("Index", "Product")" class="nav-link text-white-50">Xem tất cả</a></li>
                            <li><a href="@Url.Action("Create", "Product")" class="nav-link text-white-50">Thêm mới</a></li>
                        </ul>
                    </div>
                </li>

                <li class="nav-item">
                    <a href="#submenu-donhang" data-bs-toggle="collapse"
                       class="nav-link text-white d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-list-check me-2"></i> Đơn Hàng</span>
                        <i class="bi bi-chevron-down small"></i>
                    </a>
                    <div class="collapse" id="submenu-donhang">
                        <ul class="nav flex-column ps-4">
                            <li><a href="@Url.Action("Index", "Order")" class="nav-link text-white-50">Tất cả đơn hàng</a></li>
                        </ul>
                    </div>
                </li>

                <li class="nav-item">
                    <a href="@Url.Action("ManageUsers", "User")" class="nav-link active bg-light text-dark fw-semibold">
                        <i class="bi bi-people me-2"></i> Users
                    </a>
                </li>
            </ul>

            <div class="mt-auto pt-3 border-top border-2 border-white-50">
                <a href="@Url.Action("DangXuat", "Account")">
                    <button class="btn btn-sm btn-outline-light rounded-circle">
                        <i class="bi bi-chevron-left"></i>
                    </button>
                </a>
            </div>
        </div>

        <!-- MAIN CONTENT -->
        <div class="flex-grow-1 p-4 main-content">

            <div class="d-flex justify-content-between align-items-center mb-4 bg-white p-3 rounded-3 shadow-sm">
                <h2 class="text-dark fw-bold h4 mb-0">Quản lý người dùng</h2>
                <i style="transform: scale(3);" class="bi bi-people-fill me-4"></i>
            </div>

            <div class="card shadow-sm border-0 rounded-3 bg-white">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="fw-bold mb-0">Danh sách Người Dùng</h5>

                        <div class="d-flex align-items-center gap-2" style="width: 250px;">
                            <label class="form-label small mb-0">Search:</label>
                            <input type="search" class="form-control form-control-sm" id="tableSearch" />
                        </div>
                    </div>

                    <div class="table-responsive">

                        @if (Model != null && Model.Any())
                        {
                            <table class="table table-hover table-bordered align-middle small caption-top">
                                <thead class="table-light">
                                    <tr>
                                        <th class="text-center">ID</th>
                                        <th>Tên Đăng Nhập</th>
                                        <th>Email</th>
                                        <th>Số ĐT</th>
                                        <th class="text-center">Xác thực Email</th>
                                        <th class="text-center">Trạng Thái</th>
                                        <th class="text-center">Thao tác</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        string statusText = item.LockoutEnabled ? "Đã Khóa" : "Hoạt động";
                                        string statusClass = item.LockoutEnabled ? "bg-danger" : "bg-success";

                                        <tr>
                                            <td>@item.Id.Substring(0, 8)...</td>
                                            <td>@item.UserName</td>
                                            <td>@item.Email</td>
                                            <td>@(string.IsNullOrEmpty(item.PhoneNumber) ? "N/A" : item.PhoneNumber)</td>

                                            <td class="text-center">
                                                <span class="badge @(item.EmailConfirmed ? "bg-success" : "bg-warning")">
                                                    @(item.EmailConfirmed ? "Đã X.Thực" : "Chưa X.Thực")
                                                </span>
                                            </td>

                                            <td class="text-center">
                                                <span class="badge @statusClass">@statusText</span>
                                            </td>

                                            <td class="text-center">
                                                @Html.ActionLink("Sửa", "AdminEdit", new { id = item.Id }, new { @class = "btn btn-sm btn-info me-1" })

                                                @if (item.LockoutEnabled)
                                                {
                                                    @Html.ActionLink("Mở Khóa", "UnlockUser", new { id = item.Id },
                                                       new { @class = "btn btn-sm btn-success", onclick = "return confirm('Bạn chắc muốn mở khóa?');" })
                                                }
                                                else
                                                {
                                                    @Html.ActionLink("Khóa", "LockUser", new { id = item.Id },
                                                       new { @class = "btn btn-sm btn-warning", onclick = "return confirm('Bạn chắc muốn khóa tài khoản?');" })
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>

                            </table>
                        }
                        else
                        {
                            <p class="text-center text-muted p-4">Không tìm thấy tài khoản người dùng nào.</p>
                        }
                    </div>

                </div>
            </div>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
