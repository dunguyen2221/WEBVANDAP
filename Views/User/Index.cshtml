@model WEBVANDAP.Models.AspNetUser

@{
    ViewBag.Title = "Hồ sơ cá nhân - LogiT Shop";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body {
            background-color: #f5f5f5;
        }

        .profile-card {
            border: none;
            border-radius: 14px;
            padding: 2rem;
            background: #fff;
            box-shadow: 0 4px 20px rgba(0,0,0,0.08);
            transition: all .3s ease;
        }

            .profile-card:hover {
                transform: translateY(-4px);
                box-shadow: 0 6px 25px rgba(0,0,0,0.12);
            }

        dt {
            font-weight: 600;
            color: #444;
        }

        dd {
            color: #222;
        }
    </style>
</head>

<body>

    <div class="container" style="max-width: 650px; margin-top: 50px;">
        <div class="profile-card mb-5">

            <h3 class="fw-bold text-dark mb-4">
                <i class="bi bi-person-circle text-primary me-2"></i>
                Hồ sơ cá nhân
            </h3>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success mb-3">
                    <i class="bi bi-check-circle-fill me-2"></i>
                    @TempData["SuccessMessage"]
                </div>
            }

            <dl class="row mt-3">
                <dt class="col-sm-4">Tên đăng nhập:</dt>
                <dd class="col-sm-8 fw-bold">@Model.UserName</dd>

                <dt class="col-sm-4">Email:</dt>
                <dd class="col-sm-8">@Model.Email</dd>

                <dt class="col-sm-4">Số điện thoại:</dt>
                <dd class="col-sm-8">
                    @(string.IsNullOrEmpty(Model.PhoneNumber) ? "Chưa cung cấp" : Model.PhoneNumber)
                </dd>

                <dt class="col-sm-4">Trạng thái Email:</dt>
                <dd class="col-sm-8">
                    @(Model.EmailConfirmed ? "Đã xác thực" : "Chưa xác thực")
                </dd>
            </dl>

            <div class="d-flex flex-column gap-2 mt-4">
                <a href="@Url.Action("Edit")" class="btn btn-primary w-100">
                    <i class="bi bi-pencil-square"></i> Chỉnh sửa hồ sơ
                </a>

                <a href="@Url.Action("ManageAddress")" class="btn btn-info w-100 text-white">
                    <i class="bi bi-geo-alt"></i> Quản lý địa chỉ
                </a>

                <a href="@Url.Action("OrderHistory")" class="btn btn-success w-100 text-white">
                    <i class="bi bi-box-seam"></i> Lịch sử đơn hàng
                </a>

                <a href="@Url.Action("ChangePassword")" class="btn btn-warning w-100">
                    <i class="bi bi-shield-lock"></i> Đổi mật khẩu
                </a>

                <a href="@Url.Action("Index","Home")" class="btn btn-outline-dark w-100">
                    <i class="bi bi-house"></i> Về trang chủ
                </a>
            </div>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
