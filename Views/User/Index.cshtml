@model WEBVANDAP.Models.AspNetUser

@{
    ViewBag.Title = "Hồ sơ Cá nhân";
    // SỬ DỤNG LAYOUT CÔNG CỘNG (Client)
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - PMT Shop</title>

    <!-- Bootstrap + FontAwesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8fafc;
            margin: 0;
            padding: 0;
        }

        h2 {
            font-weight: 700;
            color: #2c3e50;
            text-align: center;
            margin-bottom: 20px;
        }

        .card {
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        dt {
            font-weight: 600;
            color: #34495e;
        }

        dd {
            color: #2c3e50;
        }

        .btn {
            border-radius: 8px;
            font-weight: 600;
            padding: 10px 18px;
        }

            .btn i {
                margin-right: 6px;
            }
        
        .container {
            max-width: 800px;
            margin-top: 50px;
        }

        .alert {
            font-weight: 500;
        }
    </style>
</head>

<body>
    <div class="container mt-5">
        <h2>Hồ Sơ Của Bạn</h2>
        <hr />

        @* CHÚ THÍCH: Hiển thị thông báo thành công sau khi sửa (từ TempData trong UserController.Edit POST) *@
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }

        <div class="card p-4 shadow-sm">
            @* CHÚ THÍCH: Hiển thị các thuộc tính của Model AspNetUser *@
            <dl class="row">
                <dt class="col-sm-3">Tên Đăng Nhập:</dt>
                <dd class="col-sm-9 fw-bold">@Model.UserName</dd>

                <dt class="col-sm-3">Email:</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Số Điện Thoại:</dt>
                <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.PhoneNumber) ? "Chưa cung cấp" : Model.PhoneNumber)</dd>

                <dt class="col-sm-3">Trạng Thái Email:</dt>
                <dd class="col-sm-9">@(Model.EmailConfirmed ? "Đã xác thực" : "Chưa xác thực")</dd>
            </dl>
        </div>

        @* CHÚ THÍCH: Các nút điều hướng đến các chức năng quản lý khác *@
        <div class="mt-4 d-flex flex-wrap gap-3 justify-content-center">
            @Html.ActionLink("✏️ Chỉnh sửa Hồ sơ", "Edit", null, new { @class = "btn btn-primary" })
            @Html.ActionLink("📍 Quản lý Địa chỉ", "ManageAddress", null, new { @class = "btn btn-info" })
            @Html.ActionLink("📦 Lịch sử Đơn hàng", "OrderHistory", null, new { @class = "btn btn-success" })
            @Html.ActionLink("🔐 Đổi Mật khẩu", "ChangePassword", null, new { @class = "btn btn-warning" })
            @Html.ActionLink("🏠 Về Trang chủ", "Index", "Home", null, new { @class = "btn btn-outline-secondary" })
        </div>
    </div>

    <!-- Bootstrap Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
