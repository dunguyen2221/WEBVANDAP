@model WEBVANDAP.Models.AspNetUser

@{
    ViewBag.Title = "Chỉnh sửa Người dùng #" + Model.UserName;
    Layout = "~/Views/Shared/Layout2.cshtml"; // Dùng layout Admin
}


        <!-- MAIN CONTENT -->
        <div class="main-content d-flex flex-column">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bold text-dark mb-0">Chỉnh sửa Người dùng <span class="text-primary">#@Model.UserName</span></h2>
                <a href="@Url.Action("ManageUsers", "User")" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Quay lại danh sách</a>
            </div>

            <div class="card p-4 mb-4">
                <h5 class="fw-bold mb-3">Thông tin cơ bản</h5>
                @using (Html.BeginForm("AdminEdit", "User", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.Id)

                    <div class="row mb-3">
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-3 col-form-label" })
                        <div class="col-md-9">
                            @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="row mb-3">
                        @Html.LabelFor(m => m.PhoneNumber, "Số điện thoại", new { @class = "col-md-3 col-form-label" })
                        <div class="col-md-9">
                            @Html.EditorFor(m => m.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <h5 class="mt-4 border-top pt-3">Phân quyền & Bảo mật</h5>
                    <div class="row mb-3">
                        @Html.Label("Role", "Chọn vai trò", new { @class = "col-md-3 col-form-label" })
                        <div class="col-md-9">
                            @Html.DropDownList("selectedRoleId", ViewBag.Roles as SelectList, new { @class = "form-select" })
                        </div>
                    </div>

                    <div class="row mb-3">
                        @Html.LabelFor(m => m.LockoutEnabled, "Khóa tài khoản?", new { @class = "col-md-3 col-form-label" })
                        <div class="col-md-9 pt-2">
                            @Html.CheckBoxFor(m => m.LockoutEnabled, new { @class = "form-check-input" })
                        </div>
                    </div>

                    <div class="mt-4 d-flex justify-content-between">
                        @Html.ActionLink("Quay lại danh sách", "ManageUsers", "User", null, new { @class = "btn btn-outline-secondary" })
                        <button type="submit" class="btn btn-primary"><i class="bi bi-save me-1"></i> Lưu thay đổi</button>
                    </div>
                }
            </div>
        </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>

