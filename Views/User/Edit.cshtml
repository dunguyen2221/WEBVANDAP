@model WEBVANDAP.Models.AspNetUser

@{
    ViewBag.Title = "Chỉnh sửa thông tin cá nhân - LogiT Shop";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body {
            background-color: #f5f5f5;
        }

        .profile-card {
            border: none;
            border-radius: 14px;
            padding: 2rem;
            background: #fff;
            box-shadow: 0 4px 20px rgba(0,0,0,0.08);
            transition: all .3s ease;
        }

            .profile-card:hover {
                transform: translateY(-4px);
                box-shadow: 0 6px 25px rgba(0,0,0,0.12);
            }
    </style>
</head>

<body>

    <!-- CONTENT -->
    <div class="container" style="max-width: 650px; margin-top: 50px;">
        <div class="profile-card mb-5">

            <h3 class="fw-bold text-dark mb-4">
                <i class="bi bi-person-gear text-primary me-2"></i>
                Chỉnh sửa thông tin cá nhân
            </h3>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Id)

                <div class="mb-3">
                    <label class="fw-semibold">Email</label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-lg", placeholder = "Nhập email..." })
                    <span class="text-danger">@Html.ValidationMessageFor(m => m.Email)</span>
                </div>

                <div class="mb-3">
                    <label class="fw-semibold">Số điện thoại</label>
                    @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control form-control-lg", placeholder = "Nhập số điện thoại..." })
                    <span class="text-danger">@Html.ValidationMessageFor(m => m.PhoneNumber)</span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-save"></i> Lưu thay đổi
                    </button>

                    <a href="@Url.Action("Index","User")" class="btn btn-outline-dark px-4">
                        <i class="bi bi-arrow-left"></i> Hủy
                    </a>
                </div>
            }

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success mt-4">
                    <i class="bi bi-check-circle-fill me-2"></i>
                    @TempData["SuccessMessage"]
                </div>
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
