@model IEnumerable<WEBVANDAP.Models.Product>

@{
    ViewBag.Title = "Trang chủ - LogiT Shop";
    Layout = "~/Views/Shared/_Layout.cshtml";

    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
    string currentSort = ViewBag.CurrentSort;
    int? currentCategory = ViewBag.CurrentCategory;
    int? currentBrand = ViewBag.CurrentBrand;
    string currentKeyword = ViewBag.SearchKeyword;
    List<WEBVANDAP.Models.Category> allCategories = ViewBag.Categories;
}

@section Styles {
    <style>
        .product-card {
            border: none;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .product-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.5);
            }

        .price {
            color: #d0021c;
            font-weight: 600;
        }

        .list-group-item {
            cursor: pointer;
        }

            .list-group-item.active {
                background-color: #0d6efd;
                color: #fff;
            }

        .filters-section {
            margin-top: 20px;
            margin-bottom: 30px;
        }
    </style>
}

<!-- ====================== BANNER ============================ -->
<div class="mt-5">
    <div class="row g-4">

        <div id="carouselInterval" class="carousel slide carousel-fade col-12 col-lg-8 ps-4" data-bs-ride="carousel"
             data-bs-pause="false">
            <div class="carousel-inner h-100">
                <div class="carousel-item active h-100" data-bs-interval="3000">
                    <img src="@Url.Content("~/Content/IMG/bannerlefttrue.png")" class="img-fluid rounded-3 h-100">
                </div>

                <div class="carousel-item h-100" data-bs-interval="3000">
                    <img src="@Url.Content("~/Content/IMG/bannerleft2.png")" class="img-fluid rounded-3 h-100">
                </div>

                <div class="carousel-item h-100" data-bs-interval="3000">
                    <img src="@Url.Content("~/Content/IMG/bannerleft3.png")" class="img-fluid rounded-3 h-100">
                </div>
            </div>

            <button class="carousel-control-prev" type="button" data-bs-target="#carouselInterval" data-bs-slide="prev">
                <span class="carousel-control-prev-icon rounded-3" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselInterval" data-bs-slide="next">
                <span class="carousel-control-next-icon rounded-3" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>

        <div class="col-12 col-lg-4">
            <div class="d-flex flex-column gap-4">
                <a href="#"><img src="@Url.Content("~/Content/IMG/banneright1.jpg")" class="img-fluid rounded-3" /></a>
                <a href="#"><img src="@Url.Content("~/Content/IMG/bannerright2.jpg")" class="img-fluid rounded-3" /></a>
                <a href="#"><img src="@Url.Content("~/Content/IMG/bannerright3.jpg")" class="img-fluid rounded-3" /></a>
            </div>
        </div>
    </div>
</div>
<!-- ====================== DANH MỤC + SẢN PHẨM ============================ -->
<div class="my-5 mx-5">
    <div class="row g-4">

        <!-- ========== SIDEBAR LỌC ========== -->
        <div class="col-lg-2 col-md-4">
            <h5 class="fw-bold mb-3">Lọc Sản Phẩm</h5>

            @using (Html.BeginForm("Index", "Home", FormMethod.Get, new { id = "filterForm", @class = "mb-4" }))
            {
                @Html.Hidden("page", 1)
                @Html.Hidden("sortBy", currentSort)
                @Html.Hidden("keyword", currentKeyword)
                @Html.Hidden("filterCategory", currentCategory, new { id = "filterCategoryHidden" })
                @Html.Hidden("filterBrand", currentBrand, new { id = "filterBrandHidden" })

                <div class="card p-3 shadow-sm mb-4">
                    <h6 class="fw-bold mb-3">Danh Mục</h6>
                    <ul class="list-group list-group-flush" id="category-list">
                        <li class="list-group-item category-item @(currentCategory == null || currentCategory == 0 ? "active" : "")"
                            data-category-id="0">Tất cả sản phẩm</li>

                        @if (allCategories != null)
                        {
                            foreach (var category in allCategories)
                            {
                                <li class="list-group-item category-item @(currentCategory == category.Id ? "active" : "")"
                                    data-category-id="@category.Id">@category.Name</li>
                                }
                            }
                    </ul>
                </div>

                <div class="card p-3 shadow-sm">
                    <h6 class="fw-bold mb-3">Thương Hiệu</h6>
                    <ul class="list-group list-group-flush" id="brand-list">
                        <li class="list-group-item text-muted">Vui lòng chọn Danh mục</li>
                    </ul>
                </div>
            }
        </div>

        <!-- ========== DANH SÁCH SẢN PHẨM ========== -->
        <div class="col-lg-10 col-md-8">

            @using (Html.BeginForm("Index", "Home", FormMethod.Get,
                new { @class = "d-flex justify-content-end align-items-center mb-4 filters-section" }))
            {
                @Html.Hidden("page", currentPage)
                @Html.Hidden("filterCategory", currentCategory)
                @Html.Hidden("filterBrand", currentBrand)
                @Html.Hidden("keyword", currentKeyword)

                <div class="d-flex align-items-center gap-2">
                    <label for="sortBy" class="form-label mb-0 small text-muted">Sắp xếp theo:</label>
                    <select id="sortBy" name="sortBy" class="form-select" onchange="this.form.submit();" style="width: 180px;">
                        <option value="popular" selected="@(currentSort == null || currentSort == "popular")">Phổ biến</option>
                        <option value="price-asc" selected="@(currentSort == "price-asc")">Giá tăng dần</option>
                        <option value="price-desc" selected="@(currentSort == "price-desc")">Giá giảm dần</option>
                    </select>
                </div>
            }

            @if (!string.IsNullOrWhiteSpace(currentKeyword))
            {
                <h5 class="mb-4 text-muted">
                    Kết quả tìm kiếm cho: <span class="fw-bold text-danger">"@currentKeyword"</span>
                </h5>
            }

            <div class="row g-4">
                @if (Model != null && Model.Any())
                {
                    foreach (var product in Model)
                    {
                        var firstImage = product.ProductImages.FirstOrDefault();
                        string imageUrl = firstImage != null ? Url.Content(firstImage.Url)
                            : Url.Content("~/Content/IMG/default_placeholder.jpg");

                        <div class="col-md-4 col-sm-6">
                            <div class="card product-card h-100 position-relative">
                                <img src="@imageUrl" class="card-img-top" alt="@product.Name">
                                <div class="card-body d-flex flex-column">
                                    <h6 class="card-title mb-3">@product.Name</h6>

                                    <div class="d-flex justify-content-between align-items-center mt-auto w-100">
                                        @if (product.Stock > 0)
                                        {
                                            <span class="badge bg-success bg-opacity-10 text-success px-2 py-1 rounded-pill fw-normal" style="font-size: 12px;">
                                                <i class="bi bi-check-circle-fill me-1"></i>Còn hàng
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary bg-opacity-10 text-secondary px-2 py-1 rounded-pill fw-normal" style="font-size: 12px;">
                                                <i class="bi bi-x-circle-fill me-1"></i>Hết hàng
                                            </span>
                                        }

                                        <p class="price mb-0 me-3 fs-5 fw-bold">@product.Price.ToString("N0") ₫</p>
                                    </div>
                                </div>

                                <div class="card-footer d-flex flex-column gap-2">
                                    <a href="@Url.Action("DetailUser","Product", new { id = product.Id })"
                                       class="btn btn-outline-primary btn-sm">Xem chi tiết</a>

                                    @using (Html.BeginForm("AddToCart", "Cart", FormMethod.Post, new { @class = "w-100" }))
                                    {
                                        @Html.Hidden("productId", product.Id)
                                        @Html.Hidden("quantity", 1)
                                        <button type="submit" class="btn btn-danger btn-sm w-100">Thêm vào giỏ hàng</button>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12 text-center py-5 text-muted">Không tìm thấy sản phẩm nào.</div>
                }
            </div>

            <!-- PHÂN TRANG -->
            <nav class="mt-5">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        @Html.ActionLink("«", "Index", new
                        {
                            page = currentPage - 1,
                            sortBy = currentSort,
                            filterCategory = currentCategory,
                            filterBrand = currentBrand,
                            keyword = currentKeyword
                        }, new { @class = "page-link" })
                    </li>

                    @for (int i = 1; i <= totalPages; i++)
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            @Html.ActionLink(i.ToString(), "Index", new
                            {
                                page = i,
                                sortBy = currentSort,
                                filterCategory = currentCategory,
                                filterBrand = currentBrand,
                                keyword = currentKeyword
                            }, new { @class = "page-link" })
                        </li>
                    }

                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                        @Html.ActionLink("»", "Index", new
                        {
                            page = currentPage + 1,
                            sortBy = currentSort,
                            filterCategory = currentCategory,
                            filterBrand = currentBrand,
                            keyword = currentKeyword
                        }, new { @class = "page-link" })
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>

<!-- ====================== JS CHO LỌC ============================ -->
@section Scripts {
    <script>
$(document).ready(function () {

    // BIẾN HIDDEN
    var initialCategoryId = parseInt($('#filterCategoryHidden').val() || 0);
    var initialBrandId = parseInt($('#filterBrandHidden').val() || 0);

    // LOAD BRAND
    function loadBrands(categoryId, selectedBrandId) {
        var brandList = $('#brand-list');
        brandList.empty();

        if (categoryId > 0) {

            $.get('@Url.Action("GetBrandsByCategory", "Home")', { categoryId: categoryId }, function (brands) {

                brandList.append(
                    `<li class="list-group-item brand-item ${selectedBrandId == 0 ? "active" : ""}"
                        data-brand-id="0">Tất cả Thương hiệu</li>`
                );

                $.each(brands, function (_, brand) {
                    var active = brand.Id == selectedBrandId ? "active" : "";
                    brandList.append(
                        `<li class="list-group-item brand-item ${active}" data-brand-id="${brand.Id}">
                            ${brand.Name}
                         </li>`
                    );
                });

                if (brands.length === 0) {
                    brandList.append('<li class="list-group-item text-muted">Không tìm thấy Brand nào.</li>');
                }
            });
        }
        else {
            brandList.append('<li class="list-group-item text-muted">Vui lòng chọn Danh mục</li>');
        }
    }

    // CLICK CATEGORY
    $('#category-list').on('click', '.category-item', function () {
        var categoryId = $(this).data('category-id');
        $('#filterCategoryHidden').val(categoryId);
        $('#filterBrandHidden').val(0);
        loadBrands(categoryId, 0);
        $('#filterForm').submit();
    });

    // CLICK BRAND
    $('#brand-list').on('click', '.brand-item', function () {
        var brandId = $(this).data('brand-id');
        $('#filterBrandHidden').val(brandId);
        $('#filterForm').submit();
    });

    // LOAD BRAND KHI VÀO TRANG
    if (initialCategoryId > 0) {
        loadBrands(initialCategoryId, initialBrandId);
    }
});
    </script>
}
