@model IEnumerable<WEBVANDAP.Models.CartItem>
@using System.Linq

@{
    ViewBag.Title = "Giỏ hàng - LogiT Shop";
    Layout = "~/Views/Shared/_Layout.cshtml";

    decimal subTotal = (Model != null) ? Model.Sum(item => (item.Quantity ?? 0) * item.UnitPrice) : 0;
    int totalItems = (Model != null) ? Model.Sum(item => item.Quantity ?? 0) : 0;

    decimal minOrderAmount = 40000;
    bool isEligibleForCheckout = subTotal >= minOrderAmount;
}

@section Styles {
    <style>
        .cart-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 2rem;
        }

        .cart-list {
            flex: 1 1 65%; /* Tăng độ rộng danh sách lên một chút */
            background-color: #fff;
            border-radius: 12px;
            padding: 25px;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
            min-width: 100px;
            max-height: 80vh;
            overflow-y: auto;
        }

        .summary-card {
            flex: 1 1 30%;
            background-color: #fff;
            border-radius: 12px;
            padding: 25px;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
            min-width: 280px;
            height: fit-content;
        }

        .cart-item-img {
            width: 80px;
            height: 80px;
            object-fit: contain;
        }

        .price {
            color: #d0021c;
            font-weight: 600;
        }

        /* --- QUANTITY BOX --- */
        .quantity-box {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .quantity-input {
            width: 40px;
            height: 30px;
            text-align: center;
            margin: 0;
            border-top: 1px solid #ced4da;
            border-bottom: 1px solid #ced4da;
            border-left: none;
            border-right: none;
            border-radius: 0;
            -moz-appearance: textfield;
        }

            .quantity-input::-webkit-outer-spin-button, .quantity-input::-webkit-inner-spin-button {
                -webkit-appearance: none;
                margin: 0;
            }

        .quantity-btn {
            width: 30px;
            height: 30px;
            line-height: 1;
            padding: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            border: 1px solid #ced4da;
            background-color: #fff;
            cursor: pointer;
        }

            .quantity-btn:hover {
                background-color: #e9ecef;
            }

            .quantity-btn.minus {
                border-radius: 4px 0 0 4px;
            }

            .quantity-btn.plus {
                border-radius: 0 4px 4px 0;
            }

        @@media (max-width: 992px) {
            .cart-container {
                flex-direction: column;
                align-items: center;
            }

            .cart-list, .summary-card {
                width: 90%;
                min-width: auto;
            }
        }
    </style>
}

<div class="container my-5">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")" class="text-decoration-none">Trang chủ</a></li>
            <li class="breadcrumb-item active" aria-current="page">Giỏ hàng (@totalItems)</li>
        </ol>
    </nav>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center">
            Giỏ hàng trống. <a href="@Url.Action("Index", "Home")" class="alert-link">Mua sắm ngay</a>.
        </div>
    }
    else
    {
        <div class="cart-container">
            <div class="cart-list">
                <h5 class="fw-bold mb-4 border-bottom pb-2">Giỏ hàng của bạn</h5>

                <div class="row text-muted fw-bold mb-3 text-uppercase small align-items-center d-none d-md-flex text-center">
                    <div class="col-5 text-start">Sản phẩm</div>  <div class="col-3">Số lượng</div>             <div class="col-3">Thành tiền</div>           <div class="col-1"></div>
                </div>

                @foreach (var item in Model)
                {
                    var qty = item.Quantity ?? 0;
                    var total = qty * item.UnitPrice;
                    string productName = item.Product?.Name ?? $"SP #{item.ProductId}";
                    string defaultImageUrl = "~/Content/ProductImages/no-image.png";
                    string imageUrl = (item.Product?.ProductImages?.FirstOrDefault()?.Url) ?? defaultImageUrl;

                    <div class="row align-items-center mb-4 border-bottom pb-3 text-center">

                        <div class="col-12 col-md-5 text-start d-flex align-items-center">
                            <img src="@Url.Content(imageUrl)" alt="@productName" class="cart-item-img border rounded me-3 flex-shrink-0" />
                            <div>
                                <h6 class="fw-semibold mb-1 text-truncate" style="max-width: 200px;">@productName</h6>
                                <p class="price mb-0 text-muted small">@item.UnitPrice.ToString("N0") đ</p>
                            </div>
                        </div>

                        <div class="col-12 col-md-3 mt-3 mt-md-0 d-flex justify-content-center">
                            @using (Html.BeginForm("UpdateQuantity", "Cart", FormMethod.Post, new { @class = "quantity-box" }))
                            {
                                @Html.Hidden("productId", item.ProductId)
                                <button type="button" class="quantity-btn minus" onclick="this.form.quantity.stepDown(); this.form.submit();" @(qty <= 1 ? "disabled" : "")>-</button>
                                <input type="number" name="quantity" class="quantity-input" min="1" value="@qty" onchange="this.form.submit()" />
                                <button type="button" class="quantity-btn plus" onclick="this.form.quantity.stepUp(); this.form.submit();">+</button>
                            }
                        </div>

                        <div class="col-12 col-md-3 mt-2 mt-md-0 fw-bold text-danger">
                            @total.ToString("N0") đ
                        </div>

                        <div class="col-12 col-md-1 mt-2 mt-md-0 text-end">
                            @using (Html.BeginForm("RemoveFromCart", "Cart", FormMethod.Post))
                            {
                                @Html.Hidden("productId", item.ProductId)
                                <button type="submit" class="btn btn-sm text-danger border-0 p-0" onclick="return confirm('Xóa sản phẩm?');">
                                    <i class="bi bi-trash fs-5"></i>
                                </button>
                            }
                        </div>
                    </div>
                }

                <div class="text-end mt-4">
                    @using (Html.BeginForm("RemoveAll", "Cart", FormMethod.Post))
                    {
                        <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('Xóa hết giỏ hàng?');">
                            <i class="bi bi-trash me-1"></i> Xoá hết giỏ hàng
                        </button>
                    }
                </div>
            </div>

            <div class="summary-card">
                <h5 class="fw-bold mb-4 border-bottom pb-2">Thông tin đơn hàng</h5>
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <span class="fs-6 fw-bold">Tổng tiền:</span>
                    <span class="fs-4 fw-bold text-danger price">@subTotal.ToString("N0") đ</span>
                </div>
                <a href="@Url.Action("Checkout", "Order")" class="btn btn-danger w-100 fw-bold fs-5 py-2 mb-3" @(isEligibleForCheckout ? "" : "disabled")>THANH TOÁN</a>
                <div class="alert alert-info p-3 d-flex align-items-start" style="background-color: #e6f7ff;">
                    <i class="bi bi-info-circle-fill fs-5 me-2 text-primary"></i>
                    <div><strong class="d-block mb-1">Chính sách mua hàng</strong><small>Chỉ thanh toán đơn hàng trên <strong>@minOrderAmount.ToString("N0") đ</strong>.</small></div>
                </div>
            </div>
        </div>
    }
</div>