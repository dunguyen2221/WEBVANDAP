@model IEnumerable<WEBVANDAP.Models.Product>

@{
    ViewBag.Title = "Kết quả tìm kiếm - LogiT Shop";
    Layout = null;

    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
    string currentSort = ViewBag.CurrentSort;
    int? currentCategory = ViewBag.CurrentCategory;
    int? currentBrand = ViewBag.CurrentBrand;
    string keyword = ViewBag.Keyword ?? "";
    List<WEBVANDAP.Models.Category> allCategories = ViewBag.Categories;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <style>
        body {
            background-color: #f5f5f5;
            scroll-behavior: smooth;
        }

        .navbar-brand img {
            height: 35px;
            margin-right: 10px;
        }

        .product-card {
            border: none;
            box-shadow: 0 8px 16px rgba(0,0,0,0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .product-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 8px 16px rgba(0,0,0,0.5);
            }

        .price {
            color: #d0021c;
            font-weight: 600;
        }

        .list-group-item {
            cursor: pointer;
        }

            .list-group-item.active {
                background-color: #0d6efd;
                color: #fff;
            }

        .filters-section {
            margin-top: 20px;
            margin-bottom: 30px;
        }

        .search-container {
            flex-grow: 1;
            margin: 0 20px;
        }

        .btn-order-history {
            white-space: nowrap;
        }
    </style>
</head>
<body>

    <!-- NAVBAR giống Home/Index -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm sticky-top">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center fw-bold text-danger" href="@Url.Action("Index","Home")">
                <img src="@Url.Content("~/Content/IMG/logo.png")" style="scale: 2.5;">
                <span class="fs-4 fw-bolder">LogiT</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <div class="search-container d-flex align-items-center">
                    <form class="d-flex w-100" action="@Url.Action("Results", "Search")" method="get">
                        <input class="form-control me-2" type="search" name="keyword" placeholder="Tìm kiếm sản phẩm..." value="@keyword" />
                        <button class="btn btn-outline-dark" type="submit"><i class="bi bi-search"></i></button>
                    </form>
                </div>

                <div class="d-flex align-items-center ms-2">
                    <a href="@Url.Action("OrderHistory", "User")" class="btn btn-outline-primary btn-order-history">
                        <i class="bi bi-clock-history me-1"></i> Lịch sử đặt hàng
                    </a>
                </div>

                <ul class="navbar-nav ms-auto mb-2 mb-lg-0 fw-semibold d-flex align-items-center">
                    <li class="nav-item d-none d-lg-block">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">TRANG CHỦ</a>
                    </li>
                    <li class="nav-item me-2">
                        <a href="@Url.Action("Index", "Cart")" class="btn btn-outline-dark position-relative">
                            <i class="bi bi-cart3"></i> Giỏ hàng
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="dropdown-toggle text-decoration-none text-dark nav-link" href="#" id="accountDropdown" data-bs-toggle="dropdown">
                            @(Session["Username"] ?? "Tài khoản")
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            @if (Session["Username"] != null)
                            {
                                <li><a class="dropdown-item" href="@Url.Action("Index","User")">Thông tin cá nhân</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("DangXuat","Account")">Đăng xuất</a></li>
                            }
                            else
                            {
                                <li><a class="dropdown-item" href="@Url.Action("DangNhap","Account")">Đăng nhập</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("DangKy","Account")">Đăng ký</a></li>
                            }
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- MAIN CONTENT -->
    <div class="my-5 mx-5 row g-4">
        <!-- Sidebar Lọc -->
        <div class="col-lg-2 col-md-4">
            <h5 class="fw-bold mb-3">Lọc Sản Phẩm</h5>

            @using (Html.BeginForm("Results", "Search", FormMethod.Get, new { id = "filterForm", @class = "mb-4" }))
            {
                @Html.Hidden("page", 1)
                @Html.Hidden("sortBy", currentSort)

                <div class="card p-3 shadow-sm mb-4">
                    <h6 class="fw-bold mb-3">Danh Mục</h6>
                    <ul class="list-group list-group-flush" id="category-list">
                        <li class="list-group-item category-item @(currentCategory == null || currentCategory == 0 ? "active" : "")" data-category-id="0">Tất cả sản phẩm</li>
                        @if (allCategories != null)
                        {
                            foreach (var category in allCategories)
                            {
                                <li class="list-group-item category-item @(currentCategory == category.Id ? "active" : "")" data-category-id="@category.Id">@category.Name</li>
                            }
                        }
                    </ul>
                    @Html.Hidden("filterCategory", currentCategory)
                </div>
            }
        </div>

        <!-- Products -->
        <div class="col-lg-10 col-md-8">
            <div class="row g-4">
                @if (Model != null && Model.Any())
                {
                    foreach (var product in Model)
                    {
                        var firstImage = product.ProductImages.FirstOrDefault();
                        string imageUrl = firstImage != null ? Url.Content(firstImage.Url) : Url.Content("~/Content/IMG/default_placeholder.jpg");

                        <div class="col-md-4 col-sm-6">
                            <div class="card product-card h-100 position-relative">
                                <img src="@imageUrl" class="card-img-top" alt="@product.Name">
                                <div class="card-body d-flex flex-column">
                                    <h6 class="card-title mb-3">@product.Name</h6>
                                    <div class="d-flex justify-content-between align-items-center mt-auto w-100">
                                        @if (product.Stock > 0)
                                        {
                                            <span class="badge bg-success bg-opacity-10 text-success px-2 py-1 rounded-pill fw-normal" style="font-size: 12px;">
                                                <i class="bi bi-check-circle-fill me-1"></i>Còn hàng
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary bg-opacity-10 text-secondary px-2 py-1 rounded-pill fw-normal" style="font-size: 12px;">
                                                <i class="bi bi-x-circle-fill me-1"></i>Hết hàng
                                            </span>
                                        }
                                        <p class="price mb-0 me-3 fs-5 fw-bold">@product.Price.ToString("N0") ₫</p>
                                    </div>
                                </div>
                                <div class="card-footer d-flex flex-column gap-2">
                                    <a href="@Url.Action("DetailUser","Product", new { id = product.Id })" class="btn btn-outline-primary btn-sm">Xem chi tiết</a>

                                    @using (Html.BeginForm("AddToCart", "Cart", FormMethod.Post, new { @class = "w-100" }))
                                    {
                                        @Html.Hidden("productId", product.Id)
                                        @Html.Hidden("quantity", 1)
                                        <button type="submit" class="btn btn-danger btn-sm w-100">Thêm vào giỏ hàng</button>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12"><div class="text-center py-5 text-muted">Không tìm thấy sản phẩm nào.</div></div>
                }
            </div>

            <!-- Pagination -->
            <nav class="mt-5">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        @Html.ActionLink("«", "Results", "Search", new { page = currentPage - 1, keyword = keyword, sortBy = currentSort, filterCategory = currentCategory }, new { @class = "page-link" })
                    </li>

                    @for (int i = 1; i <= totalPages; i++)
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            @Html.ActionLink(i.ToString(), "Results", "Search", new { page = i, keyword = keyword, sortBy = currentSort, filterCategory = currentCategory }, new { @class = "page-link" })
                        </li>
                    }

                    <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                        @Html.ActionLink("»", "Results", "Search", new { page = currentPage + 1, keyword = keyword, sortBy = currentSort, filterCategory = currentCategory }, new { @class = "page-link" })
                    </li>
                </ul>
            </nav>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
