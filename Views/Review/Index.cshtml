@model IEnumerable<WEBVANDAP.Models.Review>

@{
    ViewBag.Title = "Quản Lý Đánh Giá";
    Layout = null; // Sử dụng Layout Admin nhúng trực tiếp (Sidebar cố định)
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Admin LogiT Shop</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <style>
        /* CSS Sidebar Cố định & Layout (Đồng bộ các trang Admin khác) */
        body {
            background-color: #f0f2f5;
            font-family: "Segoe UI", sans-serif;
        }

        .sidebar {
            width: 220px;
        }

        .main-content {
            padding: 30px;
            background-color: #abaeb14a;
            flex-grow: 1;
        }

        .card {
            border-radius: 12px;
            box-shadow: 0 3px 8px rgba(0, 0, 0, 0.08);
        }

        .table thead {
            background-color: #3b7dd3;
            color: white;
        }

        .star-rating {
            color: #ffc107;
            font-size: 0.9rem;
        }

        /* Giới hạn chiều dài nội dung review */
        .review-content {
            max-width: 300px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
    </style>
</head>

<body class="bg-body-tertiary">

    <div class="d-flex" style="min-height: 100vh;">

        <div class="sidebar d-flex flex-column flex-shrink-0 p-3 text-white bg-primary position-sticky top-0" style="height: 100vh;">

            <a class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none" href="@Url.Action("Index", "Admin")">
                <img style="width: 32px; scale: 2.5;" class="img-fluid me-3"
                     src="@Url.Content("~/Content/IMG/logo.png")" alt="LogiT Logo">
                <span class="fs-4 fw-bold">ADMIN</span>
            </a>
            <hr class="text-white opacity-25">

            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a href="@Url.Action("Index", "Admin")" class="nav-link text-white fw-semibold">
                        <i class="bi bi-speedometer2 me-2"></i> Dashboard
                    </a>
                </li>

                <li class="nav-item mt-3">
                    <span class="text-white-50 text-uppercase small fw-bold">Management</span>
                </li>

                <li class="nav-item">
                    <a href="#submenu-sanpham" data-bs-toggle="collapse"
                       class="nav-link text-white d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-box-seam me-2"></i> Sản Phẩm</span>
                        <i class="bi bi-chevron-down small"></i>
                    </a>
                    <div class="collapse" id="submenu-sanpham">
                        <ul class="nav flex-column ps-4">
                            <li><a href="@Url.Action("Index", "Product")" class="nav-link text-white-50">Xem tất cả</a></li>
                            <li><a href="@Url.Action("Create", "Product")" class="nav-link text-white-50">Thêm mới</a></li>
                        </ul>
                    </div>
                </li>

                <li class="nav-item">
                    <a href="#submenu-donhang" data-bs-toggle="collapse"
                       class="nav-link text-white d-flex justify-content-between align-items-center">
                        <span><i class="bi bi-list-check me-2"></i> Đơn Hàng</span>
                        <i class="bi bi-chevron-down small"></i>
                    </a>
                    <div class="collapse" id="submenu-donhang">
                        <ul class="nav flex-column ps-4">
                            <li><a href="@Url.Action("Index", "Order")" class="nav-link text-white-50">Tất cả đơn hàng</a></li>
                        </ul>
                    </div>
                </li>

                <li class="nav-item">
                    <a href="@Url.Action("ManageUsers", "User")" class="nav-link text-white">
                        <i class="bi bi-people me-2"></i> Users
                    </a>
                </li>

                <li class="nav-item">
                    <a href="@Url.Action("Index", "Review")" class="nav-link active bg-light text-dark fw-semibold">
                        <i class="bi bi-star-half me-2"></i> Đánh Giá
                    </a>
                </li>
            </ul>

            <div class="mt-auto pt-3 border-top border-2 border-white-50">
                <a href="@Url.Action("DangXuat", "Account")" class="btn btn-sm btn-outline-light rounded-circle">
                    <i class="bi bi-chevron-left"></i>
                </a>
            </div>
        </div>
        <div class="flex-grow-1 p-4 d-flex flex-column main-content">

            <div class="d-flex justify-content-between align-items-center mb-4 bg-white p-3 rounded-3 shadow-sm">
                <h2 class="text-dark fw-bold h4 mb-0">Quản lý Đánh giá Sản phẩm</h2>
                <i style="scale: 2.5;" class="bi bi-chat-left-quote me-4 text-primary"></i>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="card shadow-sm border-0 rounded-3 bg-white">
                <div class="card-body p-4">

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="fw-bold mb-0">Danh sách Đánh giá (@(Model != null ? Model.Count() : 0))</h5>
                    </div>

                    <div class="table-responsive">
                        @if (Model != null && Model.Any())
                        {
                            <table class="table table-hover table-bordered align-middle small caption-top">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width: 5%;">ID</th>
                                        <th style="width: 20%;">Sản phẩm</th>
                                        <th style="width: 15%;">Người dùng</th>
                                        <th style="width: 15%;" class="text-center">Đánh giá</th>
                                        <th style="width: 25%;">Nội dung</th>
                                        <th style="width: 10%;">Ngày tạo</th>
                                        <th style="width: 10%;" class="text-center">Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>
                                                <a href="@Url.Action("Details", "Product", new { id = item.ProductId })" target="_blank" class="text-decoration-none fw-bold">
                                                    @(item.Product != null ? item.Product.Name : "SP đã xóa")
                                                </a>
                                            </td>
                                            <td>@(item.AspNetUser != null ? item.AspNetUser.UserName : "Ẩn danh")</td>

                                            <td class="text-center star-rating">
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    if (i <= item.Rating)
                                                    {
                                                        <i class="bi bi-star-fill"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="bi bi-star"></i>
                                                    }
                                                }
                                            </td>

                                            <td>
                                                <div class="review-content" title="@item.Comment">
                                                    @item.Comment
                                                </div>
                                            </td>

                                            <td>@(item.CreatedAt.HasValue ? item.CreatedAt.Value.ToString("dd/MM/yyyy") : "")</td>

                                            <td class="text-center">
                                                @using (Html.BeginForm("Delete", "Review", FormMethod.Post))
                                                {
                                                    @Html.Hidden("id", item.Id)
                                                    <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa đánh giá này không?');">
                                                        <i class="bi bi-trash"></i> Xóa
                                                    </button>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <div class="text-center py-5 text-muted">
                                <i class="bi bi-chat-square-text fs-1"></i>
                                <p class="mt-2">Chưa có đánh giá nào.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>